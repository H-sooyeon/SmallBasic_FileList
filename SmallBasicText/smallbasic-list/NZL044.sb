Sub Main  

   'Ë•?Â∫ïÈü≥Ê®?

   Sound.Play(path +"\00150.mp3")  

  status = "play"

  old_level = curr_level

  While (status = "play" Or status = "pause" Or status = "reload" Or status = "get_answer") 

    

    If old_level <> curr_level Or status = "reload" Then

       MyLevel() 

       old_level = curr_level

       status = "pause"

    EndIf  

  

    '?ôï?êÜËªäÂ≠êÁßªÂãï  & Âø´ÊÖ¢?ñì?öî?ôÇ?ñì

    loopdelay = (3000/60) * loopmssec

    num = 0

    While(num < loopdelay)

       num = num + 1

    EndWhile

    

    If status = "play" Then

       '‰∏ªËªäÁßªÂãï

       Action()

 		

       '?ïµËªäÁöÑ?ãï‰Ω?     

       loopdelay = (3000/60) * loopmssec

       num = 0

       While(num < loopdelay)

         num = num + 1

       EndWhile 

       catch_me()



       If enemyCnt = 0 Then

          If curr_level < 4 Then

             curr_level = curr_level + 1

             status = "pause"

          Else

             status = "success"            

          EndIf 

       ElseIf mycarCnt = 0 Then

          status = "lose"         

       EndIf

    EndIf  

  EndWhile

  

  ' ?Åé?óú?ï´?ù¢

  If status = "success" Then

     GraphicsWindow.DrawImage(success,55,126) 

  ElseIf status = "lose" Then

     GraphicsWindow.DrawImage(lose,55,126)    

  EndIf 

  Program.Delay(3000)

  Program.End()

EndSub

