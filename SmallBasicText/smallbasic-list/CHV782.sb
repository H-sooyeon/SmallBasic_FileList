TextWindow.Write("Enter a number : ")
Num = TextWindow.ReadNumber()
Sum = 0
While Text.GetLength(Num) > 1
  For i = 1 To Text.GetLength(Num)
    Sum = Sum + Text.GetSubText(Num,i,1)
  EndFor
  Num = Sum
  Sum = 0
EndWhile
TextWindow.WriteLine("Sum of all digits : "+Num)
