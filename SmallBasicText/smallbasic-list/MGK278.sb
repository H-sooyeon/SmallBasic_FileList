GraphicsWindow.Title = "roads

GraphicsWindow.Width = 1200

GraphicsWindow.Height = 700

GraphicsWindow.top=0

GraphicsWindow.left=0

GraphicsWindow.BackgroundColor = "green"



GraphicsWindow.PenWidth=7

Turtle.Speed = 10

For mm=0 to 1

  For yy=-100 to 300 step 400

    For xx=300 to 1300 step 400

      Turtle.Angle=-90

      Turtle.x=xx

      Turtle.y=yy

      rdd()

    endfor

  endfor

  If mm=0 Then

    LDShapes.RasteriseTurtleLines ()

    LDShapes.RemoveTurtleLines ()

    ldGraphicsWindow.FloodFill (1 1 "darkgray")

  endif

endfor



Sub rdd

  If mm=0 then

    For r=1 To 4

      

      GraphicsWindow.PenColor="darkgray

      

      Turtle.Move(145)

      

      For i = 0 To 29 

        Turtle.Move(3)

        Turtle.Turn(-3)

      EndFor

    EndFor

  else

    GraphicsWindow.PenColor="white

   

    Turtle.PenUp ()

    Turtle.Turn (90)

    Turtle.Move (15)

    Turtle.Turn (-90)

    Turtle.PenDown ()

    For r=1 To 4 

      Turtle.Move(140)

      

      For i = 0 To 29 

        Turtle.Move(3.9)

        Turtle.Turn(-3)

      EndFor

      

    endfor

  endif

endsub


