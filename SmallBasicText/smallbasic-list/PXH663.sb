init()

writename()

direction=-90

a=1

drawMethylgroup()

Turtle.Turn(-60)

color1="Black"

color2="Black"

GraphicsWindow.PenColor="Black"

For i = 1 To 6

  drawatom()

  x[i]=Turtle.X

  y[i]=Turtle.Y

  drawbond()

  Turtle.Turn(60)

EndFor

For i = 1 To 6

  Turtle.PenUp()

  Turtle.MoveTo(x[i],y[i])

  Turtle.PenDown()

  If i>1 And i<4 Or i>4 Then

    Turtle.Angle=-90+(i-1)*60

    color1="Black"

    color2="White"

    drawbond()

    drawatom()

  EndIf

EndFor

Turtle.PenUp()

Turtle.MoveTo(x[4],y[4])

Turtle.Angle=90

direction=90

a=2

Turtle.PenDown()

drawMethylgroup()

Turtle.Hide()



Sub init

  r=20

  d=r*2

  GraphicsWindow.Title="Molecular Challenge-Terephthalic acid[C6H4(COOH)2]"

  GraphicsWindow.Height=500

  GraphicsWindow.Width=800

  GraphicsWindow.BackgroundColor="#dabc72"

  GraphicsWindow.PenWidth=15

  Turtle.Speed=10

EndSub

Sub writename

  GraphicsWindow.FontBold="false"

  GraphicsWindow.FontName="Times New Roman"

  GraphicsWindow.BrushColor="White"

  GraphicsWindow.FontSize=48

  GraphicsWindow.DrawText(300,20,"C")

  GraphicsWindow.FontSize=24

  GraphicsWindow.DrawText(340,50,"6")

  GraphicsWindow.FontSize=48

  GraphicsWindow.DrawText(360,20,"H")

  GraphicsWindow.FontSize=24

  GraphicsWindow.DrawText(400,50,"4")

  GraphicsWindow.FontSize=48

  GraphicsWindow.DrawText(420,20,"(COOH)")

  GraphicsWindow.FontSize=24

  GraphicsWindow.DrawText(590,50,"2")

EndSub

Sub drawatom

  GraphicsWindow.BrushColor=GraphicsWindow.PenColor

  GraphicsWindow.FillEllipse(Turtle.X-r,Turtle.Y-r,d,d)

EndSub

Sub drawbond

  GraphicsWindow.PenColor=color1

  Turtle.Move(r+20)

  GraphicsWindow.PenColor=color2

  Turtle.Move(20+r)

EndSub

Sub drawMethylgroup

  Turtle.Angle=direction

  color1="Black"

  color2="Black"

  drawbond()

  drawatom()

  x=Turtle.X

  y=Turtle.Y

  temp=10

  GraphicsWindow.PenWidth=7.5

  For i = 1 To 3

    Turtle.PenUp()

    Turtle.MoveTo(x+temp,y)

    If a = 1 Then

      Turtle.Angle=-150

    Else

      Turtle.Angle=30

    EndIf

    color2="Red"

    If i=2 Then

      Turtle.PenUp()

    Else

      Turtle.PenDown()

    EndIf

    If i<2 Or i>2 Then

      drawbond()

    Else

      drawbond()

      drawatom()

    EndIf

    temp=temp-10

  EndFor

  Turtle.PenUp()

  Turtle.MoveTo(x,y)

  Turtle.PenDown()

  Turtle.Turn(-60)

  GraphicsWindow.PenWidth=15

  drawbond()

  drawatom()

  Turtle.Turn(-60)

  color1=color2

  color2="White"

  drawbond()

  drawatom()

  Turtle.PenUp()

  Turtle.MoveTo(x,y)

  Turtle.Angle=90+(a-1)*180

  drawbond()

  Turtle.PenDown()

EndSub


