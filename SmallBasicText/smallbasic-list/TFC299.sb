TextWindow.WriteLine("Please Enter a math problem.")
Question = TextWindow.Read()

idx = Text.GetIndexOf(Question,"+")
If idx >= 1 Then
  left = Text.GetSubText(Question, 1, idx - 1)
  right = Text.GetSubTextToEnd(Question, idx + 1)
  answer = left + right
  TextWindow.WriteLine(answer)
EndIf

  idx = Text.GetIndexOf(Question,"-")
If idx >= 1 Then
  left = Text.GetSubText(Question, 1, idx - 1)
  right = Text.GetSubTextToEnd(Question, idx + 1)
  answer = left - right
  TextWindow.WriteLine(answer)
EndIf

  idx = Text.GetIndexOf(Question,"*")
If idx >= 1 Then
  left = Text.GetSubText(Question, 1, idx - 1)
  right = Text.GetSubTextToEnd(Question, idx + 1)
  answer = left * right
  TextWindow.WriteLine(answer)
EndIf
  idx = Text.GetIndexOf(Question,"/")
If idx >= 1 Then
  left = Text.GetSubText(Question, 1, idx - 1)
  right = Text.GetSubTextToEnd(Question, idx + 1)
  answer = left / right
  TextWindow.WriteLine(answer)
EndIf
