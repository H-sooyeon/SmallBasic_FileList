Ball = Shapes.AddEllipse(50,50)

xvel = 4

Grav = 32

Time = 0

While 1 = 1

  Program.Delay(5)

  Time = Time + .02

  x = x + xvel

  y = (Grav / 2) * (Time * Time) + 50

  Shapes.Move(Ball,x,y)

  



    Tick()



  

  If x > GraphicsWindow.Width - 50 Or x < 0 Then

    xvel = - xvel

    EndIf

  EndWhile

  

  Sub tick

    GraphicsWindow.FillEllipse(x + 25,y + 25,10,10)

    EndSub


