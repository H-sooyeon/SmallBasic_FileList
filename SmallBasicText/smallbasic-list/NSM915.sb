gw=800
gh=600
GraphicsWindow.Width=gw
GraphicsWindow.Height=gh
GraphicsWindow.CanResize="false"
GraphicsWindow.BackgroundColor="lightblue"
GraphicsWindow.MouseMove = OnMouseMove
ball = Shapes.AddEllipse(10,10)

Xeye=gw/2
Yeye=gh/2
Zeye=-100

Xpoint=gw/2
Ypoint=gh/2
Zpoint=0

Xsize=100
Ysize=100
Zsize=50

While ("true")
  GraphicsWindow.Clear()
  
  Xpoint=Xpoint+Math.GetRandomNumber(5)-3
  Ypoint=Ypoint+Math.GetRandomNumber(5)-3
  
  Drawbox()

  Program.Delay(100)
  
EndWhile

Sub OnMouseMove
  Xeye = gw-GraphicsWindow.MouseX
  Yeye = gh-GraphicsWindow.MouseY
EndSub

Sub Position
    Xdir=Xp-Xeye
    Ydir=Yp-Yeye
    Zdir=Zp-Zeye
    dist=0-Zeye/Zdir
    x=Xeye+dist*Xdir
    y=Yeye+dist*Ydir  
EndSub
  
Sub DrawLine
    Xp=Xp1
    Yp=Yp1
    Zp=Zp1
    Position()
    x1=x
    y1=y
    Xp=Xp2
    Yp=Yp2
    Zp=Zp2
    Position()
    x2=x
    y2=y
    GraphicsWindow.DrawLine(x1,y1,x2,y2)
EndSub
  
Sub Drawbox
  'X
  GraphicsWindow.PenColor="Red"
  Xp1=Xpoint-Xsize
  Yp1=Ypoint-Ysize
  Zp1=Zpoint-Zsize  
  Xp2=Xpoint+Xsize
  Yp2=Ypoint-Ysize
  Zp2=Zpoint-Zsize
  DrawLine()
  
  GraphicsWindow.PenColor="Red"
  Xp1=Xpoint-Xsize
  Yp1=Ypoint+Ysize
  Zp1=Zpoint-Zsize  
  Xp2=Xpoint+Xsize
  Yp2=Ypoint+Ysize
  Zp2=Zpoint-Zsize
  DrawLine()
  
  GraphicsWindow.PenColor="Blue"
  Xp1=Xpoint-Xsize
  Yp1=Ypoint+Ysize
  Zp1=Zpoint+Zsize  
  Xp2=Xpoint+Xsize
  Yp2=Ypoint+Ysize
  Zp2=Zpoint+Zsize
  DrawLine()
  
  GraphicsWindow.PenColor="Blue"
  Xp1=Xpoint-Xsize
  Yp1=Ypoint-Ysize
  Zp1=Zpoint+Zsize
  Xp2=Xpoint+Xsize
  Yp2=Ypoint-Ysize
  Zp2=Zpoint+Zsize
  DrawLine()
  
  'Y
  GraphicsWindow.PenColor="Red"
  Xp1=Xpoint-Xsize
  Yp1=Ypoint-Ysize
  Zp1=Zpoint-Zsize  
  Xp2=Xpoint-Xsize
  Yp2=Ypoint+Ysize
  Zp2=Zpoint-Zsize
  DrawLine()
  
  GraphicsWindow.PenColor="Red"
  Xp1=Xpoint+Xsize
  Yp1=Ypoint-Ysize
  Zp1=Zpoint-Zsize  
  Xp2=Xpoint+Xsize
  Yp2=Ypoint+Ysize
  Zp2=Zpoint-Zsize
  DrawLine()
  
  GraphicsWindow.PenColor="Blue"
  Xp1=Xpoint+Xsize
  Yp1=Ypoint-Ysize
  Zp1=Zpoint+Zsize  
  Xp2=Xpoint+Xsize
  Yp2=Ypoint+Ysize
  Zp2=Zpoint+Zsize
  DrawLine()
  
  GraphicsWindow.PenColor="Blue"
  Xp1=Xpoint-Xsize
  Yp1=Ypoint-Ysize
  Zp1=Zpoint+Zsize  
  Xp2=Xpoint-Xsize
  Yp2=Ypoint+Ysize
  Zp2=Zpoint+Zsize
  DrawLine()
  
  'Z
  GraphicsWindow.PenColor="Green"
  Xp1=Xpoint-Xsize
  Yp1=Ypoint-Ysize
  Zp1=Zpoint-Zsize  
  Xp2=Xpoint-Xsize
  Yp2=Ypoint-Ysize
  Zp2=Zpoint+Zsize
  DrawLine()
  
  Xp1=Xpoint+Xsize
  Yp1=Ypoint-Ysize
  Zp1=Zpoint-Zsize  
  Xp2=Xpoint+Xsize
  Yp2=Ypoint-Ysize
  Zp2=Zpoint+Zsize
  DrawLine()
  
  Xp1=Xpoint+Xsize
  Yp1=Ypoint+Ysize
  Zp1=Zpoint-Zsize  
  Xp2=Xpoint+Xsize
  Yp2=Ypoint+Ysize
  Zp2=Zpoint+Zsize
  DrawLine()
  
  Xp1=Xpoint-Xsize
  Yp1=Ypoint+Ysize
  Zp1=Zpoint-Zsize  
  Xp2=Xpoint-Xsize
  Yp2=Ypoint+Ysize
  Zp2=Zpoint+Zsize
  DrawLine()
EndSub
  
  
  
