TextWindow.WriteLine("Please enter your name or a word:")

input = TextWindow.Read() 'Get input (person's name)

For i = 1 To Text.GetLength(input)

  output=Text.Append(Text.GetSubText(input,i,1),output) 'Get each character of the name or word, and store them in an array

EndFor

TextWindow.WriteLine("Your name/word in reverse is: " + output)


