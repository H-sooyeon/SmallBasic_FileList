EndSub

Turtle.Show()

GraphicsWindow.PenWidth=1.5

Turtle.Speed=10

p33=13

Turtle.Angle=45

cll="0=darkblue;1=gold"

clw="0=2;1=1.5"

psz=1

While 1=1

  p=p+1

  ps=ps+1

  For x=1 To 5

    Turtle.Move(5)

    Program.Delay(p33)

  EndFor

  For x=1 To 18

    Turtle.Turn(5)

    Turtle.Move(5)

    Program.Delay(p33)

  EndFor

  For x=1 To 5

    Turtle.Move(5)

    Program.Delay(p33)

  EndFor

  Turtle.Turn(90*p)

  if p=2 then

    p=0

  EndIf

  if ps=8 Then

    psz=psz+1

    ps=0

    GraphicsWindow.PenColor=cll[math.Remainder( psz 2)]

    GraphicsWindow.PenWidth=clw[math.Remainder( psz 2)]

    EndIf

EndWhile


