begin:



hour = Clock.Hour

min = Clock.Minute

sec = Clock.Second

TextWindow.Write(Clock.Hour + " ")

num = hour

bincalc()

TextWindow.Write(" ")

TextWindow.Write(Clock.Minute + " ")

num = min

bincalc()

TextWindow.Write(" ")

TextWindow.Write(Clock.Second + " ")

num = sec

bincalc()

Program.Delay(500)

TextWindow.Clear()



Goto begin





Sub bincalc

x = 128

While x >= 1

  if num >= x Then 

   num = (num - x)

  TextWindow.Write("1")

  else

  TextWindow.Write("0")

EndIf

  x = x/2

EndWhile

EndSub


