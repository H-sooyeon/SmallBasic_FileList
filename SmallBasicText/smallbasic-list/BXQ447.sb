GraphicsWindow.Show()

GraphicsWindow.CanResize = 0

GraphicsWindow.Width = 800

GraphicsWindow.Height = 600

GraphicsWindow.BackgroundColor = "blace"

Mouse.HideCursor()

Turtle.Show()

Turtle.Speed = 10

Res:

GraphicsWindow.Clear()

Turtle.X = 400

Turtle.Y = 300

T = Math.GetRandomNumber(360)

A = 10

While Turtle.X>0 And Turtle.Y>0

  GraphicsWindow.PenColor = GraphicsWindow.GetRandomColor()

  Turtle.Move(A)

  Turtle.Turn(T)

  A = A + 2

EndWhile

Program.Delay(5000)

Goto Res


