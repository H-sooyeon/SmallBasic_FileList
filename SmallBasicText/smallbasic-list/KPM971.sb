TextWindow.WriteLine("-------")

num=TextWindow.Read()

TextWindow.WriteLine("number 2? ")

TextWindow.WriteLine("---------")

numb=TextWindow.Read()

TextWindow.WriteLine("process? [add][sub][div][mul] ")

TextWindow.WriteLine("--------------------------")

pro=Textwindow.Read()

If pro=("add")Then

  TextWindow.Clear()

