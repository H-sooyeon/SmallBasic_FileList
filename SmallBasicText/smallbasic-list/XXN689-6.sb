    swap = cir["obj1"]

    cir["obj1"] = cir["obj9"]

    cir["obj9"] = swap

    swap = cir["obj2"]

    cir["obj2"] = cir["obj13"]

    cir["obj13"] = swap

    circuit[num] = cir

    nLight = nLight + 1

    light[nLight] = num

    If cir["state"] = "on" Then

      Light_On()

    EndIf

  EndIf

EndFor

