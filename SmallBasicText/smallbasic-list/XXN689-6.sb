angle = 0

count = Array.GetItemCount(circuit)

cell = Array.GetAllIndices(circuit)

nSwitch = 0

For i = 1 To count

  cir = circuit[cell[i]]

  par = part[cir["part"]]

  If cir["part"] = "line" Then

    Shapes_Init()

  ElseIf cir["part"] = "corner" Then

    Corner_Init()

  ElseIf cir["part"] = "branch" Then

    Branch_Init()

  ElseIf cir["part"] = "switch" Then

    Switch_Init()

  ElseIf cir["part"] = "battery" Then

    Battery_Init()

  ElseIf cir["part"] = "light" Then

    Light_Init()

  EndIf

  Shapes_Add()

  Circuit_CalcCellParam()

  Shapes_Move()

  If cir["angle"] <> "" Then

    angle = cir["angle"]

    Shapes_Rotate()

  EndIf

  cir["obj0"] = shape[1]["obj"]

  cir["nShapes"] = Array.GetItemCount(shape)

  index = Array.GetAllIndices(shape)

  For n = 1 To cir["nShapes"]

    cir["obj" + n] = shape[index[n]]["obj"]

  EndFor

  num = cell[i]

  circuit[num] = cir

  If cir["part"] = "switch" Then

    swap = cir["obj1"]

    cir["obj1"] = cir["obj4"]

    cir["obj4"] = cir["obj14"]

    cir["obj14"] = swap

    swap = cir["obj2"]

    cir["obj2"] = cir["obj5"]

    cir["obj5"] = cir["obj3"]

    cir["obj3"] = cir["obj13"]

    cir["obj13"] = swap

    circuit[num] = cir

    nSwitch = nSwitch + 1

    switch[nSwitch] = num

    If cir["state"] = "off" Then

      Switch_Off()

    EndIf

  EndIf

