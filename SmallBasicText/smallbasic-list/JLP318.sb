Sub ShowLK

  GraphicsWindow.BrushColor = GraphicsWindow.BackgroundColor 

  GraphicsWindow.FillRectangle(109,29,100,40)

  GraphicsWindow.BrushColor = BrushColor 

  GraphicsWindow.DrawText(110,30,LK)

EndSub 'ShowLK



Sub OnKeyUp

  OKeyUp = T

