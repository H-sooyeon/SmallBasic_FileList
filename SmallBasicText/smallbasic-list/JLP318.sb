While LK <> "Return"

  If OKeyUp = T Then

    OKeyUp = F 

    LK = GraphicsWindow.LastKey 

    ShowLK()

    If Array.ContainsValue(AlowedChar, LK) = T Then

      TBT[1] = Controls.GetTextBoxText(TB[1])

      OldTBT[1] = TBT[1]

      LDFocus.SetFocus(TB[1])

    Else 

      Controls.SetTextBoxText(TB[1], OldTBT[1])

      LDFocus.SetFocus(TB[1])

    EndIf 

  EndIf 

EndWhile 

