Sub Main

  While Again = true

    While Play = true

      ShowTelescopicSight()

      ShowClayPigeon()

      Collision() 

      Program.Delay(4)

    EndWhile 'Play

    Program.Delay(300)

    Retry()

    Program.Delay(300)

  EndWhile 'Again

EndSub 



