r=30

d=r*2

init()

writename()

For i = 1 To 6

  xofC[i]=Turtle.X-r

  yofC[i]=Turtle.Y-r

  If i>4 Or i<3 Then

    Turtle.Angle=direction2

    Turtle.Move(r+20)

    GraphicsWindow.PenColor="white"

    Turtle.Move(r+20)

    xofH[i]=Turtle.X-r

    yofH[i]=Turtle.Y-r

    Turtle.PenUp()

    Turtle.MoveTo(xofC[i]+r,yofC[i]+r)

  EndIf

  Turtle.Angle=direction1

  Turtle.PenDown()

  GraphicsWindow.PenColor="black"

  Turtle.Move(r+40+r)

  Turtle.Turn(60)

  direction1=direction1+60

  direction2=direction2+60

EndFor' the benzene

drawatoms1()

Turtle.PenUp()

Turtle.MoveTo(xofC[3]+r,yofC[3]+r)

Turtle.Angle=72

Turtle.PenDown()

For i = 1 To 5

  If i=2 Then

    GraphicsWindow.PenColor="black"

    Turtle.Move(r+20)

    GraphicsWindow.PenColor="darkblue"

    Turtle.Move(20+r)

    x[i]=Turtle.X-r

    y[i]=Turtle.Y-r

    Turtle.Turn(72)

  ElseIf i=3 Then

    GraphicsWindow.PenColor="darkblue"

    Turtle.Move(r+20)

    GraphicsWindow.PenColor="yellow"

    Turtle.Move(20+r)

    x[i]=Turtle.X-r

    y[i]=Turtle.Y-r

    Turtle.Turn(72)

  ElseIf i=4 Then

    GraphicsWindow.PenColor="yellow"

    Turtle.Move(r+20)

    GraphicsWindow.PenColor="black"

    Turtle.Move(20+r)

    x[i]=Turtle.X-r

    y[i]=Turtle.Y-r

    Turtle.Turn(72)

  Else

    GraphicsWindow.PenColor="black"

    Turtle.Move(r+40+r)

    x[i]=Turtle.X-r

    y[i]=Turtle.Y-r

    Turtle.Turn(72)

  EndIf

EndFor'

drawatoms2()

GraphicsWindow.PenWidth=7.5

For i = 1 To 3

  Turtle.PenUp()

  If i=1 Then

    Turtle.MoveTo(x[1]+r-10,y[1]+r)

    Turtle.PenDown()

  ElseIf i=2 Then

    Turtle.MoveTo(x[1]+r+10,y[1]+r)

    Turtle.PenDown()

  Else

    Turtle.MoveTo(x[1]+r,y[1]+r)

  EndIf

  Turtle.Angle=12

  GraphicsWindow.PenColor="Black"

  Turtle.Move(r+20)

  GraphicsWindow.PenColor="Red"

  Turtle.Move(20+r)

  If i=3 Then

    GraphicsWindow.BrushColor="Red"

    GraphicsWindow.FillEllipse(Turtle.X-r,Turtle.Y-r,d,d)

  EndIf

EndFor' the double bonds

Turtle.PenUp()

Turtle.MoveTo(x[2]+r,y[2]+r)

Turtle.Angle=84

Turtle.PenDown()

GraphicsWindow.PenWidth=15

GraphicsWindow.PenColor="darkBlue"

Turtle.Move(r+20)

GraphicsWindow.PenColor="White"

Turtle.Move(20+r)

GraphicsWindow.BrushColor="White"

GraphicsWindow.FillEllipse(Turtle.X-r,Turtle.Y-r,d,d)

Turtle.PenUp()

Turtle.MoveTo(x[3]+r,y[3]+r)' the nitrogen & hydrogen

direction1=156

For i = 1 To 2

  Turtle.Angle=direction1

  GraphicsWindow.PenColor="Yellow"

  Turtle.PenDown()

  Turtle.Move(r+20)

  GraphicsWindow.PenColor="red"

  Turtle.Move(20+r)

  GraphicsWindow.BrushColor="red"

  GraphicsWindow.FillEllipse(Turtle.X-r,Turtle.Y-r,d,d)

  Turtle.PenUp()

  Turtle.MoveTo(x[3]+r,y[3]+r)

  direction1=direction1+60

EndFor' the two S-O 

Turtle.Hide()



Sub init

  GraphicsWindow.Title="Molecular Challenge-Saccharin(C7H5NO3S)"

  GraphicsWindow.Height=600

  GraphicsWindow.Width=1000

  GraphicsWindow.BackgroundColor="#dabc72"

  GraphicsWindow.PenWidth=15

  Turtle.Speed=10

  Turtle.PenUp()

  Turtle.MoveTo(200,200)

  Turtle.Angle=60

  direction1=60

  direction2=300

  Turtle.PenDown()

EndSub

Sub writename

  GraphicsWindow.FontBold="false"

  GraphicsWindow.FontName="times new roman"

  GraphicsWindow.BrushColor="White"

  GraphicsWindow.FontSize=48

  GraphicsWindow.DrawText(700,20,"C")

  GraphicsWindow.FontSize=24

  GraphicsWindow.DrawText(740,50,"7")

  GraphicsWindow.FontSize=48

  GraphicsWindow.DrawText(760,20,"H")

  GraphicsWindow.FontSize=24

  GraphicsWindow.DrawText(800,50,"5")

  GraphicsWindow.FontSize=48

  GraphicsWindow.DrawText(820,20,"NO")

  GraphicsWindow.FontSize=24

  GraphicsWindow.DrawText(890,50,"3")

  GraphicsWindow.FontSize=48

  GraphicsWindow.DrawText(910,20,"S")

EndSub

Sub drawatoms1

  For i = 1 To 6

    If i>4 Or i<3 Then

      GraphicsWindow.BrushColor="black"

      GraphicsWindow.FillEllipse(xofC[i],yofC[i],d,d)

      GraphicsWindow.BrushColor="white"

      GraphicsWindow.FillEllipse(xofH[i],yofH[i],d,d)

    EndIf

  EndFor

EndSub

Sub drawatoms2

  GraphicsWindow.BrushColor="black"

  For i = 1 To 5

    If i=2 Then

      GraphicsWindow.BrushColor="darkBlue"

      GraphicsWindow.FillEllipse(x[i],y[i],d,d)

    ElseIf i=3 Then

      GraphicsWindow.BrushColor="Yellow"

      GraphicsWindow.FillEllipse(x[i],y[i],d,d)

    Else

      GraphicsWindow.BrushColor="Black"

      GraphicsWindow.FillEllipse(x[i],y[i],d,d)

    EndIf

  EndFor

EndSub


