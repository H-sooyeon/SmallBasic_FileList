GraphicsWindow.KeyDown = OnKeyDown

GraphicsWindow.KeyUp = OnKeyUp

Turtle.Show()

Turtle.Speed = 9

pen = 1



While ("true")

  If (up = 1)Then

    Turtle.Move(5)

  EndIf

  Program.Delay(10)

EndWhile



Sub OnKeyDown

  GraphicsWindow.Title = key + "Is Down"

  key = GraphicsWindow.LastKey 'We don't want auto repeat delay for this key

  If (key = "Up")Then

    up = 1

  ElseIf (key = "Down")then ' We want auto repeat delay for this and other keys

    Turtle.Turn(5)

  elseif (key = "Left")then

    Turtle.TurnLeft()

  elseif (key = "Right")then

    Turtle.TurnRight()

  elseif (key = "Space")then 

    If (pen = 1)then

      Turtle.PenUp()

      pen = 0

    Else

      Turtle.PenDown()

      pen = 1

    EndIf

  Else

    GraphicsWindow.Title = "Sorry, " + key + " does not do anything."

  EndIf

EndSub



Sub OnKeyUp

  GraphicsWindow.Title = key + " is up."

  key = GraphicsWindow.LastKey

  If (key = "Up")Then

    up = 0

  EndIf

EndSub

    


