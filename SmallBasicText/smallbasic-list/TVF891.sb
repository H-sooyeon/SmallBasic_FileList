        GraphicsWindow.BrushColor="gold" 'LDColours.HSLtoRGB (y*60 1 .5)

        GraphicsWindow .FillRectangle  (x*20+sx sy+y*17.5 7 18 )

      endif

      i=i+1

      

    EndFor 

