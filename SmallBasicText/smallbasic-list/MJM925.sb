tt=ldtext.Split (TX " ")

Turtle.Speed =9

GraphicsWindow.Title ="The Line

GraphicsWindow.PenWidth =4

GraphicsWindow.BackgroundColor ="TEAL

GraphicsWindow.PenColor ="white

For x=1 To Array.GetItemCount (tt)

  ldrw()

