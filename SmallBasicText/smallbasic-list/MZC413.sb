Sub Penrose 

  teta=36 

  size= 24

  iter= 4

  axiom="[Y]++[Y]++[Y]++[Y]++[Y]"

  newW="YF++ZF----XF[-YF----WF]++"  

  newX="+YF--ZF[---WF--XF]+"

  newY="-WF++XF[+++YF++ZF]-" 

  newZ="--YF++++WF[+ZF++++XF]--XF"  

  newF=""    

EndSub



