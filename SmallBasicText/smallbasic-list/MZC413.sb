ff="tree tree2 tree3 Bush Koch sc32 Peano Mozaic Snowflake triangles Rhombes PeanoGosper

fn=LDText.Split(ff " ")

ac=Array.GetItemCount(fn)



For rr=1 To ac

  LDCall.Function(fn[rr] "")

  createInstinct()

  start()

  execute()

  Program.Delay(3333)

  if rr<ac then

    GraphicsWindow.Clear()

    EndIf

EndFor



