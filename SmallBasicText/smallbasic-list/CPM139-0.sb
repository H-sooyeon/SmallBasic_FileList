InitHearts()



duration = 2000

n = Array.GetItemCount(heart)

index = Array.GetAllIndices(heart)

For i = 1 To n

  h = heart[index[i]]

  haroon = Shapes.AddText("?Ÿ’?")

  Shapes.Move(haroon, 0, 0)

  Shapes.Animate(haroon, h["x"], h["y"], duration)

  Shapes.Rotate(haroon, h["angle"])

EndFor



