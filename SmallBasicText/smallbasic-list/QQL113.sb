      lovecount = lovecount + 1

    EndIf

    if letter2 = "A" Then

      lovecount = lovecount + 0.8

    EndIf

    if letter2 = "E" Then

      lovecount = lovecount + 0.5

    EndIf

  EndFor

  amount = 0

  if LoveCount > 0 Then

    amount =  5 - ((firstlength + secondlength) / 2)

    EndIf

  If LoveCount > 2 Then

    amount = 10 - ((firstlength + secondlength) / 2)

    EndIf

    if LoveCount > 4 Then

