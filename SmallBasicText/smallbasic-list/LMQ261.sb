    LDShapes.BrushColour(r[x][y] LDColours.HSLtoRGB(240-y*10 1 .6))

  EndFor

EndFor



While 1=1

  For rr=1 To 9

    v[rr]=v[rr]+Math.GetRandomNumber(5)-3

    if v[rr]>30 Then

      v[rr]=30

      elseif v[rr]<0 Then

      v[rr]=0

      EndIf

    for n=1 to v[rr]

      Shapes.ShowShape(r[rr][n])

    EndFor

     for n=v[rr]+1 to 30

      Shapes.hideShape(r[rr][n])

      EndFor

  EndFor

  

 

EndWhile






