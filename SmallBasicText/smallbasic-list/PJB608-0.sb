Sub InitEyes

  ss = s[1][1]

  _shx = shX[1][1]

  _shy = shY[1][1]

  eyes[1] = shp["1:1"][9]

  cx[1] = 67.5 * ss + _shx

  cy[1] = 102.5 * ss + _shy

  r1[1] = 14 * ss

  r2[1] = 15 * ss

  eyes[2] = shp["1:1"][10]

  cx[2] = 217.5 * ss + _shx

  cy[2] = 102.5 * ss + _shy

  r1[2] = 14 * ss

  r2[2] = 15 * ss

EndSub



Sub MoveEyes

  _a = _a + Math.Pi / 16

  For i = 1 To 2

    x = cx[i] + r1[i] * Math.Sin(_a)

    y = cy[i]

    Shapes.Move(eyes[i], x - r2[i], y - r2[i])

  EndFor

EndSub


