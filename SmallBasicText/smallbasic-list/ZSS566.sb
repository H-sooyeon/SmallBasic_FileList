' *********************** get formula and point and process ***********************************************

sub get_formula

  

  For x = 1 To 5

     formula[x]=Controls.GetTextBoxText(Fbox[x])

     

     

     If formula[x] = "sum" then

         compute_sum()

       ElseIf formula[x] = "average" then

         compute_average()

            ElseIf formula[x] = "multiply" then

               compute_multiply()

                endif

   

   endfor

 EndSub

 



 

   '  ****************************** @ SUM ********************************************************

   

Sub compute_sum

  init_cell()

sum0[x]=0  

     

           For y = 1 To 12

             value=Controls.GetTextBoxText(cell[x][y])

             sum0[x] = sum0[x]+value

           EndFor

           ' x = la boite qui est relié avec Fbox(x) qui determine quel formule

       

           Controls.SetTextBoxText(box[x],sum0[x])

EndSub





