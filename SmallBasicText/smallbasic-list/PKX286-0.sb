Sub mww

  If Mouse.IsLeftButtonDown Then 

    aa=aa+ LDEvents.LastMouseWheelDelta *3

  Else

    ss=ss+ LDEvents.LastMouseWheelDelta/10 

  EndIf 

  LDGraphicsWindow.Reposition (ss ss 0 0 aa)

EndSub 

  


