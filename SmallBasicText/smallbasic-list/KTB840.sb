DisplaySize = 8 'amount of characters long the display is

Width = 12

Height = Width*4

OffOpac = 10

OnOpac = 95

GraphicsWindow.BackgroundColor = "Black"

GraphicsWindow.BrushColor = "White"

GraphicsWindow.PenWidth = 0

GraphicsWindow.Width = (DisplaySize) * (Height + Width + 24) + 12

GraphicsWindow.Height = Height*2+Width*3

For w = 1 To DisplaySize

  X = (w-1) * (Height + Width + 24) + 12

  AddSlot()

  If Math.Remainder(w,2) = 1 And w > 1 Then

    For i = 1 To 2

      Dot[i] = Shapes.AddRectangle(Width/2,Width/2)

      Shapes.Move(Dot[i],(w-1) * (Height + Width + 24)+2,i*Height-Height/2+8)

      Shapes.Rotate(Dot[i],45)

    EndFor

  EndIf

EndFor



While 1 = 1

  Second = Clock.Second

  If Second < 10 Then

    Second = Text.Append(0,Second)

  EndIf

  Minute = Clock.Minute

  If Minute < 10 Then

    Minute = Text.Append(0,Minute)

  EndIf

  Hour = Clock.Hour

  Extra = "AM"

  If Hour > 12 Then

    Hour = Hour-12

    Extra = "PM"

  EndIf

  If Hour < 10 Then

    Hour = Text.Append(0,Hour)

  EndIf

  Time = Text.Append(Text.Append(Hour,Minute),Second)

  For ToDisp = 1 To 6

    Num = Text.GetSubText(Time,ToDisp,1)

    If Num = 1 Then

      Show1()

    ElseIf Num = 2 Then

      Show2()

    ElseIf Num = 3 Then

      Show3()

    ElseIf Num = 4 Then

      Show4()

    ElseIf Num = 5 Then

      Show5()

    ElseIf Num = 6 Then

      Show6()

    ElseIf Num = 7 Then

      Show7()

    ElseIf Num = 8 Then

      Show8()

    ElseIf Num = 9 Then

      Show9()

    ElseIf Num = 0 Then

      Show0()

    EndIf

  EndFor

  ToDisp = 8

  If Extra = "AM" Then

    ShowA()

  Else

    ShowP()

  EndIf

  Program.Delay(1000)

  Sound.PlayChimes()

  ShutPanelsOff()

EndWhile



Sub AddSlot

  X = X+8

  For f = 1 To 2

    Y = Width

    For i = 1 To 2

      Verti_Segment()

      Shapes.SetOpacity(Part1Sector[index],OffOpac)

      Shapes.SetOpacity(Part2Sector[index],OffOpac)

      Shapes.SetOpacity(Part3Sector[index],OffOpac)

      Y = Y + Height + 4

    EndFor

    X = X + Height+4

  EndFor

  Y = Width

  X = X-Height*2-6

  For i = 1 To 3

    Horiz_Segment()

    Shapes.SetOpacity(Part1Sector[index],OffOpac)

    Shapes.SetOpacity(Part2Sector[index],OffOpac)

    Shapes.SetOpacity(Part3Sector[index],OffOpac)

    Y = Y + Height + 3

  EndFor

  X = (w-1) * (Height + Width + 24) + 30

  Y = Height-2

  UpSlant_Segment()

  Shapes.SetOpacity(Part1Sector[index],OffOpac)

  Shapes.SetOpacity(Part2Sector[index],OffOpac)

  Shapes.SetOpacity(Part3Sector[index],OffOpac)

  Y = Y*2+5

  DownSlant_Segment()

  Shapes.SetOpacity(Part1Sector[index],OffOpac)

  Shapes.SetOpacity(Part2Sector[index],OffOpac)

  Shapes.SetOpacity(Part3Sector[index],OffOpac)

EndSub



Sub Show1

  For t = ToDisp*9-9+3 To ToDisp*9-9+4

