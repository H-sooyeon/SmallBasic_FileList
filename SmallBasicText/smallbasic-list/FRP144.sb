Init()



While PE = F 

  Eventreaction()

EndWhile 

Program.End()



Sub Eventreaction

  if OBC = T Then 

    OBC = F

    ReactionButtonClicked()

  ElseIf OTT = T Then

    OTT = F

    ReactionTextTyped()

  ElseIf OKD = T Then

    OKD = F

    ReactionKeyDown()

  ElseIf OKU = T Then

    OKU = F

    ReactionKeyUp()

  ElseIf OMD = T Then

    OMD = F 

    ReactionMouseDown()

  ElseIf OMM = T Then

    OMM = F

    ReactionMouseMove()

  ElseIf OMU = T Then

    OMU = F

    ReactionMouseUp()

  ElseIf OTI = T Then

    OTI = F

    ReactionTextInput()

  ElseIf OTT = T Then

    OTT = F

    ReactionTimerTicked()

  EndIf 

EndSub 



Sub ReactionButtonClicked

  LCB = Controls.LastClickedButton 

  Shapes.SetText(S[18], LCB+" was clicked")

  If LCB = Button[4] Then

    PE = T

  ElseIf LCB = Button[1] Then

    Controls.HideControl(Button[1])

    Controls.ShowControl(Button[2])

  ElseiF LCB = Button[2] Then

    Controls.HideControl(Button[2])

    Controls.ShowControl(Button[3])

  ElseIf LCB = Button[3] Then 

    Controls.HideControl(Button[3])

    Controls.ShowControl(Button[1])

  EndIf 

EndSub 



Sub ReactionTextTyped

  MLTBText = ""

  MLTBText = Controls.GetTextBoxText(MLTB)

  Shapes.SetText(S[18], MLTBText)

EndSub 



