secs = 0.00

numofwords = 0

wordspersec = 0



Timer.Interval = 10

Timer.Tick = Tock

Timer.Resume()

While "True"

  readkey = TextWindow.ReadKey()

  TextWindow.Write(readkey)

  If Text.GetCharacterCode(readkey) = 32 Then

    numofwords = numofwords + 1

    wordspersec = numofwords / secs

    TextWindow.Title = "Words per second : " + wordspersec

  EndIf

EndWhile







Sub Tock

  secs = secs + 0.01

EndSub


