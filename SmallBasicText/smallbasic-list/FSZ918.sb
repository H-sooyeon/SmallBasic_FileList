Turtle.Speed = 10

Turtle.PenUp()

Turtle.MoveTo(200,200)

Turtle.PenDown()

GraphicsWindow.PenWidth = 20



For lenScale = 0.05 To 1 Step 0.05

  GraphicsWindow.Title = lenScale

  Ellipse()

  Turtle.Angle = -90

  Turtle.Move(dist)

EndFor

GraphicsWindow.PenWidth = 10

Ellipse()



'Ellipse

Sub Ellipse

  For i = 1 To 360

    Turtle.Angle = i

    If (i < 90) Then

      Turtle.Move((1+i/50) * lenScale)

    ElseIf (i < 180) Then

      Turtle.Move((1+(180-i)/50) * lenScale)

    ElseIf (i < 270) Then

      Turtle.Move((1+(i-180)/50) * lenScale)

    Else

      Turtle.Move((1+(360-i)/50) * lenScale)

    EndIf

    If (i = 90) Then

      dist = Turtle.X-200

    EndIf

  EndFor

EndSub



