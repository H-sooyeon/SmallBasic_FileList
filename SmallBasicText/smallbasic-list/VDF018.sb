Sub Sorting    '  sorting 

  end_nn=nn

Loop2:

    If  end_nn=1 Then 

        Goto end1

    EndIf



  For j=2 To end_nn

    c12=""

    c22=""

    

    D11=WD[j-1]                           'original   word 

    c11=text.ConvertToLowerCase(WD[j-1])  '   ConvertToLowerCase

    D21=WD[j]

    c21=text.ConvertToLowerCase(WD[j])

    L1=Text.GetLength(c11)

    L2=Text.GetLength(c21)

    If L2<L1 Then 

      LL=L2

    Else

      LL=L1                     ' LL   ...  shorter   number

    EndIf

    For i=1 To LL

      c12=Text.GetCharacterCode(text.GetSubText(c11,i,1))

      c22=Text.GetCharacterCode(text.GetSubText(c21,i,1))

      If 0<Math.Abs(c12-c22) Then    ' compare code number  one by one

        Goto end2

      EndIf

    EndFor

   

   end2:

      If c22<c12 then 

         WD[j-1]=D21             ' change word  with original word

         WD[j]=D11

       ElseIf c22=c12 and L2<L1 then 

         WD[j-1]=D21

         WD[j]=D11  

     endif

   EndFor

   end_nn=end_nn-1

Goto Loop2



end1:

   For i=1 To mm+1

       Shapes.Remove(s[i])  

   EndFor

   For j=1 To nn

       s[j]=Shapes.AddText(WD[j])

       X[j]=x[j-1]+13*Text.GetLength(WD[j-1])+5

       Shapes.Animate(s[j],50+x[j],450,600)    ' display rearranged words

   EndFor

   mm=nn

EndSub



Sub Data_input

  nn=0

  dm=dm+" "

  For i=1 To Text.GetLength(dm)

      a=text.GetSubText(dm,i,1)

      If a<>" " Then      ' space = delimiter 

        b=text.Append(b,a)

        Goto end3

      endif

      If b<>"" And a=" " Then 

      nn=nn+1

      WD[nn]=b   '  word input 

      b=""

      endif

     end3:

   EndFor

EndSub

  

sub  onbuttonclick

