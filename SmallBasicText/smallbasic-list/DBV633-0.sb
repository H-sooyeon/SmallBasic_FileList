  new: 

  new()

  yposn=30

  pcnt= (100/(objano-ano))

  a=1

  While a=1

    ddsemana= ddsemana+1

    dia= dia+1

    If ddsemana=8 Then 

      ddsemana=1

      If mes=objmes Then 

        yposn=yposn+dstY

      EndIf

    EndIf

    rmd= Math.Floor(maxdia[2]-min[Math.Remainder(ano,4) ])

    If dia>rmd And mes=2 Then

      dia=1

      mes= mes+1

      yposn=30

    EndIf

    If dia>maxdia[mes] Then

      dia=1

      mes= mes+1

    EndIf

    If mes>12 Then

      mes=1

      ano=ano+1 

      yposn=30 

    EndIf

    If dia = objdia And mes=objmes And ano=objano Then

      a=2

    EndIf

    If objmes=mes And objano=ano Then

      GraphicsWindow.DrawText(distance_X[semana[ddsemana]]+5,yposn+40,dia)

    EndIf

  EndWhile

  GraphicsWindow.Title="View of month "+month_name[mes]+" - "+ano

EndSub

