Sub getmonth

  GraphicsWindow.BrushColor=LDColours.HSLtoRGB(Math.GetRandomNumber(360),0.3+((Math.GetRandomNumber(5))/10),0.3+((Math.GetRandomNumber(5))/10))

  nw= LDWindows.Create()

