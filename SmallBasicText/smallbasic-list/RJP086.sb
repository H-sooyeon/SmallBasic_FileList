Sub StripAndLoad

  

  If Len[a] = 1 Then

    D2 = N[a]

    Stack.PushValue("Times2",Letters[1][D2])

  ElseIf Len[a]= 2 Then

    D1 =  Math.Floor(N[a]/10)

    D2 = Math.Remainder(N[a],(D1*10))   

    Stack.PushValue("Times2",(Letters[2][D1]+Letters[1][D2]))

    

  EndiF

  

EndSub

