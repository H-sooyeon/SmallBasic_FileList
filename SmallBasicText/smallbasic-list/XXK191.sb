  Sub green_led   

 Program.Delay(1000)    

    For T = 10 To 50 Step 2

  GraphicsWindow.Drawimage(BLED_OFF,x,y)

  Program.Delay(T)

  GraphicsWindow.Drawimage(GLED_ON,x,y)

  Program.Delay(T)

  D=T*3

  F=T*2

  Sound.PlayMusic("O8 L"+D+"b")

EndFor



EndSub











Sub red_led

  Program.Delay(1000)

  For T = 10 To 50 Step 2

  GraphicsWindow.Drawimage(BLED_OFF,x,y)

  Program.Delay(T)

  GraphicsWindow.Drawimage(RLED_ON,x,y)

  Program.Delay(T)

  D=T*3

  F=T/3

  Sound.PlayMusic("O8 L"+D+"e")

EndFor

EndSub







