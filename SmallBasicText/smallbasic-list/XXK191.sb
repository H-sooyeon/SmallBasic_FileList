 sub tictactoe

   For music = 1 To 10

   For h=1 To 7

     f=math.GetRandomNumber(3)+5

     d=math.GetRandomNumber(64)+32

     note[1]="c"

     note[2]="d"

     note[3]="e"

     note[4]="f"

     note[5]="g"

     note[6]="a"

     note[7]="b"

          Sound.PlayMusic("O"+f+"L"+d+note[h])

     EndFor

        endfor

        

        GraphicsWindow.FontSize="100"

        GraphicsWindow.brushcolor="blue"

        GraphicsWindow.DrawBoundText(10,200,600,"tic tac toe")

    Goto FIN

  EndSub

      

 





       

  

  

