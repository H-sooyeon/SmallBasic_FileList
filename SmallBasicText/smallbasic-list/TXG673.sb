    nct=0

  elseIf ld=1 Then

    Shapes.Remove (pp)

    If nww=1 then

      b=ldtext.Split (bb," ")

      nww=0

    endif

    If nsl>0 then

      ' GraphicsWindow.Clear ()

      drwnod=1

    endif

    dospln ()

  elseIf ld=3 Then

