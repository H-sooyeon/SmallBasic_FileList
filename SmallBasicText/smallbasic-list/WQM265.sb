Sub Shapes_CalcRotateZoomPos

  

  _cx = param["x"] + param["width"] / 2

  _cy = param["y"] + param["height"] / 2

  ll=LDMath.Convert2Radial(param["cx"] param["cy"] _cx _cy)

  r= ll[1]

  a = ll[2] + param["angle"]

  x = r * Math.Cos(a * Math.Pi / 180) * param["scale"]

  y = r * Math.Sin(a * Math.Pi / 180) * param["scale"]

  _cx = x + param["cx"]

  _cy = y + param["cy"]

  x = _cx - param["width"] / 2

  y = _cy - param["height"] / 2

EndSub



Sub Shapes_CalcWidthAndHeight

  

  For i = 1 To Array.GetItemCount(shape)

    shp = shape[i]

    If shp["func"] = "tri"  Then

      xmin = shp["x1"]

      xmax = shp["x1"]

      ymin = shp["y1"]

      ymax = shp["y1"]

      If shp["x2"] < xmin Then

        xmin = shp["x2"]

      EndIf

      If xmax < shp["x2"] Then

        xmax = shp["x2"]

      EndIf

      If shp["y2"] < ymin Then

        ymin = shp["y2"]

      EndIf

      If ymax < shp["y2"] Then

        ymax = shp["y2"]

      EndIf

      If shp["x3"] < xmin Then

        xmin = shp["x3"]

      EndIf

      If xmax < shp["x3"] Then

        xmax = shp["x3"]

      EndIf

      If shp["y3"] < ymin Then

        ymin = shp["y3"]

      EndIf

      If ymax < shp["y3"] Then

        ymax = shp["y3"]

      EndIf

      shp["width"] = xmax - xmin

      shp["height"] = ymax - ymin

    EndIf

    shWidth=1

    shHeight=1

    shape[i] = shp

  EndFor

EndSub



