Sub pdrw

  lx=args[1]+args[3] 

  ly=args[2]+args[4]

  If mirr Then

    GraphicsWindow.drawLine(dx-args[1]*ss dy+hh-(args[2]*ss) dx-lx*ss dy+hh-ly*ss)

  Else

    GraphicsWindow.drawLine(dx+args[1]*ss dy+hh-(args[2]*ss) dx+lx*ss dy+hh-ly*ss)

  EndIf

EndSub





Sub pdrwq

  ii=1

  If mirr Then

    po[ii][1]=dx-args[1]*ss

  Else

    po[ii][1]=dx+args[1]*ss

  EndIf

  po[ii][2]=dy+hh-args[2]*ss

  lx=args[1]

  ly=args[2]

  lx=lx+args[3] 

  ly=ly+args[4]

  ii=ii+1

  If mirr Then 

    po[ii][1]=dx-lx*ss 

  Else

    po[ii][1]=dx+lx*ss 

  EndIf

  po[ii][2]=dy+hh-ly*ss

EndSub 



Sub pdrwq1

  lx=lx+args[1] 

  ly=ly+args[2]

  ii=ii+1

  If mirr Then 

    po[ii][1]=dx-lx*ss 

  Else

    po[ii][1]=dx+lx*ss 

  EndIf

  po[ii][2]=dy+hh-ly*ss

  

EndSub


