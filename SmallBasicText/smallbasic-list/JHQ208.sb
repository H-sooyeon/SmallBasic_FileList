PArray1D.New("chars",10000000)

PArray1D.New("charscode",1000000)

PArray1D.New("keychars",1000000)

PArray1D.New("keycharscode",1000000)

PArray1D.New("encryptedcharcode",1000000)

PArray1D.New("encryptedchar",1000000)

EndSub

