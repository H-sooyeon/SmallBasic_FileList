moveKey = "W"

turnLeftKey = "A"

turnRightKey = "D"

Turtle.Show()

GraphicsWindow.KeyDown = keyDown

Sub keyDown

  If GraphicsWindow.LastKey = moveKey Then

    Turtle.Move(10)

  ElseIf GraphicsWindow.LastKey = turnLeftKey Then

    Turtle.Turn("-10")

  ElseIf GraphicsWindow.LastKey = turnRightKey then

    Turtle.Turn("+10")

  EndIf

EndSub


