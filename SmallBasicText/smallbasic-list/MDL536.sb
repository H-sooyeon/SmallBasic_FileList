Sub OnTextInput   ' Auslesen aus der Textbox direkt

  If Controls.LastTypedTextBox = TBoxName Then

    TBText = Controls.GetTextBoxText(TBoxName)

    TextWindow.WriteLine(TBText)

  EndIf

EndSub




