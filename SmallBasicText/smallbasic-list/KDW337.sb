GraphicsWindow.BackgroundColor="teal
GraphicsWindow.Title ="Know Turte Draw
rott()

Sub rott
  GraphicsWindow.PenWidth=0
  GraphicsWindow.BrushColor="gold
  Shapes.AddEllipse (50 50)
  GraphicsWindow.BrushColor="darkred
  tt=Shapes.AddTriangle (0 0 10 0 5 20)
  Shapes.Move (tt 20 30)
EndSub 

GraphicsWindow.PenColor="lime
GraphicsWindow.PenWidth=4
GraphicsWindow.MouseDown=mdd
Timer.Tick=ttt
Timer.Interval=75

Sub ttt
  aa=aa+15
  LDShapes.RotateAbout (tt 25 25 aa)
EndSub 

Sub mdd
  Timer.Pause ()
  Turtle.Angle=aa+180
  Turtle.Move (50)
  'aa=0
  Timer.Resume  ()
EndSub 
