  GWT=50

  GWW=1320

  GWH=500 

  DX=20

  DY=150

  DH=50

  WX=60

  KLIST=""

  TNP=120

  ONK0=4

  Rep=2

  V=4

  PCH=8

  D[1]="CDEFGABCDEFGABCDEFGAB"

  D[2]="XXSFXSFXXXXSFXSFXSFXXXXSFXSFXXXXSFXSFXSFXXXXSFXSFXXXXSFXSFXSFXX"

