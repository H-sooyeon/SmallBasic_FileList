Sub OnmouseDown 

     MX=Math.Ceiling((GraphicsWindow.MouseX-DX)/WX)

     MY=GraphicsWindow.MouseY

     If MY>DY then        '  piano key area > DY

        NormalSharpFlat()

        Code_BOX()             'Display  and save  KeyList

        File_Save()  

    Endif

Endsub



