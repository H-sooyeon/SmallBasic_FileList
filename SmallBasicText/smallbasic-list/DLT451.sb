counter = 15

target = 13

turn = Math.GetRandomNumber(2)

turnselect()







Sub turnselect

  TextWindow.Clear()

  TextWindow.WriteLine("There are " + counter + " left")

  For i=1 To counter 

    TextWindow.Write("|")

  EndFor

  If (turn = 1) Then

    yourturn()

  Else

    comturn()

  EndIf

EndSub



Sub yourturn

  start1: 

  TextWindow.WriteLine("How many will you take away? (1, 2, 3)")

  ans = TextWindow.ReadNumber()

  If (ans = ("1")) Then 

    counter = counter - 1

  ElseIf (ans = ("2")) Then

    counter = counter - 2

  ElseIf (ans = 3) Then

    counter = counter - 3

  EndIf

  If (counter < 1) Then

    TextWindow.Clear()

    TextWindow.WriteLine("You Lose")

  EndIf

  turnselect()

  turn = 2

EndSub



Sub comturn

  If (counter > target) Then

    target = target - 4

  EndIf

  counter = counter - target

  target = target - 4

  If (counter < 1) Then

    TextWindow.Clear()

    TextWindow.WriteLine("You Win!")

  EndIf

  turn = 1

EndSub



    

  



  


