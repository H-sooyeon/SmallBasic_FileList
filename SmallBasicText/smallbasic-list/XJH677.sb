Sub SeparateCSV

  value = ""

  i = 0

  len = Text.GetLength(csv)

  p = 1

  While p <= len

    comma = Text.GetIndexOf(Text.GetSubTextToEnd(csv, p), ",")

    i = i + 1

    If comma > 0 Then ' comma found

      value[i] = Text.GetSubText(csv, p, comma - 1)

      p = p + comma

    Else  ' comma not found

      value[i] = Text.GetSubTextToEnd(csv, p)

      p = len + 1

    EndIf

  EndWhile

EndSub


