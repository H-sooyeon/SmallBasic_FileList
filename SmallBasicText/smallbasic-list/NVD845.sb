Sub dset

  For w=1 To 8

    If Text.GetSubText (args[1] w 1)="1" Then

      Shapes.SetOpacity (ss[ix[w]] 20)

    Else

      Shapes.SetOpacity (ss[ix[w]] 100)

    EndIf

  EndFor 

EndSub

      


