    If Mouse.MouseX > 100 and Mouse.MouseX < 120 AND  Mouse.MouseY > 100+WB and Mouse.MouseY < 120+WB Then

      GraphicsWindow.PenColor = chalk_green 

      dt=dt+"CL:"+GraphicsWindow.PenColor +"|"

