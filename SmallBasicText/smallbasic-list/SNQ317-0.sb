Sub AdressenPflegen
  Init()
  InitInput()
  Outputs()
  While C1 = 0
    If (C2 = 1) Then 'Show new index if it has changed
      Outputs()
      C2 = 0
    EndIf
  EndWhile 
EndSub 'AdressenPflegen

