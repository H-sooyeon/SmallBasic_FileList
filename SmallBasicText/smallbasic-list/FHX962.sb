Sub dolevl

   GraphicsWindow.Title =">>>

  c15=array.GetItemCount (block[stage])

  For i = 1 To c15

    For p = 1 To Text.GetLength(block[stage][i])

      blockcode = Text.GetSubText(block[stage][i], p, 1) 

      If text.IsSubText ("4567" blockcode) then 

