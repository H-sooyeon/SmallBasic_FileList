TextWindow.Title = "Tile cost calculator - SmallBasic Forums Intermediate Challenge Jan12"

TextWindow.WriteLine("My Solution")

areaA = ((15+5)/2)*10

areaB = 14*8



TextWindow.WriteLine("The area of the trapezium is "+ areaA +"cm2")

TextWindow.WriteLine("The area of the parallelogram is "+ areaB +"cm2")

costA = areaA * 2500

totA = costA * 0.2



costB = areaB * 3500

totB = costB * 0.1



jan = totA + totB



totA1 = totA * 1.5

totB1 = totB * 1.5



feb = totA1 + totB1



fulltot = jan + feb



TextWindow.WriteLine("The total for January was: $" +jan)



TextWindow.WriteLine("The total for Febuary was: $" +feb)



TextWindow.WriteLine("The full total for these months was: $" +fulltot)


