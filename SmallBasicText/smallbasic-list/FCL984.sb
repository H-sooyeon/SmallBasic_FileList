TextWindow.Write("Enter a number to find it's 'Square Root' : ")
num = TextWindow.ReadNumber()
'Calculate Sqrt
accuracy = 0.0001
For i = accuracy To num Step accuracy
  If i * i >= num Then
    TextWindow.WriteLine("Sqrt without built-in function = "+i)
    TextWindow.WriteLine("By built-in function = "+Math.SquareRoot(num))
    i = num
  EndIf
EndFor
