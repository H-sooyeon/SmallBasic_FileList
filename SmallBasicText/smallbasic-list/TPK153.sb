Sub DrawLetter

  For i = 1 To Array.GetItemCount(angle)

    DrawLine()

  EndFor

EndSub



Sub DrawLine

  Turtle.Angle = angle[i]

  dist = length[i]

  While (dist > 0)

    GraphicsWindow.PenColor = GraphicsWindow.GetRandomColor()  

    len = Math.Min(dash,dist)

    Turtle.PenDown()   

    Turtle.Move(len)    

    dist = dist-len

    len = Math.Min(dash,dist)

    Turtle.PenUp()   

    Turtle.Move(len)    

    dist = dist-len

  EndWhile

EndSub

    


