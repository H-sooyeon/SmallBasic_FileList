r35=60

ya=60

LD3DView.ResetCamera(view3D, r35/2,ya,r35/2, -1, -.5, 0, "","","")



sub tree' :size

  p=p+1

  size[p]=args[1]

  if size[p] < 10 then

    

    dd=size 

    tmov()

    dd=size

    tmov()

    LD3DView.AddTube (view3d tb .3 10 "Lime" "D")

    cc=cc+1

    tb=""

  else

    dd= size[p]/3

    tmov()

    tang=tang- 30 

    

    ldcall.Function ("tree" size[p]*2/3 )

    p=p-1

    tang=tang+ 30

    

    dd=size[p]/6

    tmov()

    tang=tang+ 25 

    ldcall.Function ("tree" size[p]/2) 

    p=p-1

    tang=tang - 25

    

    dd= size[p]/3

    tmov()

    tang=tang+ 25 

    ldcall.Function ("tree" size[p]/2 )

    p=p-1 

    tang=tang - 25

    

    dd=size[p]/6

    tmov()

    dd=-size[p]

    tmov()

    

  EndIf 

EndSub

