Sub tmov

  mm=LDMath.Convert2Cartesian(tx ty dd tang-90)

  tb=tb+ ldmath.FixDecimal (mm[1]/10 3)+":"+ (10-ldmath.FixDecimal (mm[2]/10 3))+":0:"

  tx=mm[1]

  ty=mm[2]

EndSub 


