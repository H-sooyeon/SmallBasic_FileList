Sub drr

  GraphicsWindow.PenWidth=2

  GraphicsWindow.PenColor=LDColours.HSLtoRGB(args[5] 1 .6)

  ss[x]=Shapes.AddLine(args[1] args[2] args[1]+args[3] args[2]+args[4])

  vv[x]=vs

  

  if vs="false" Then

    Shapes.HideShape(ss[x])

    EndIf

  x=x+1

