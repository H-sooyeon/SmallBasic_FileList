not="false=true;true=false



While 1=1

  For f=1 To Array.GetItemCount(ss)

    vv[f]=not[vv[f]]

    if vv[f] then

     Shapes.showShape(ss[f])

    else

    Shapes.hideShape(ss[f])

    EndIf

    Program.Delay(3)

    LDGraphicsWindow.Reposition(LDMath.Sin(f)/4+.5 LDMath.Sin(f)/4+.5 0 150 aa)

