  vs="true

  LDCall.Function5("drr" 40 i+88 175,-2*i i*2)

  LDCall.Function5("drr" 128-i 0 2*i 175 180-i*2)

  vs="false

  LDCall.Function5("drr" 40 i 175,175-2*i i*2)

