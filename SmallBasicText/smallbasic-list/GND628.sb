      ii=1

    endif

    

    sset()

  ElseIf lk="d1" then

    TextWindow.Write ("Node: ")

    ii=TextWindow.ReadNumber() 

    

  ElseIf lk="down"  then

    ii=ii+1

    sset()



  ElseIf lk="home" then

    ii=1

    sset() 

  EndIf 

  GraphicsWindow.Title =ii

