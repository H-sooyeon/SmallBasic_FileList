'Animation Of Text Font Size
While ("true")
GraphicsWindow.FontSize = 100
tb = Controls.AddTextBox(0,0)
Controls.SetSize(tb,1000,500)
Controls.SetTextBoxText(tb,"small basic")
Program.Delay(2000)
GraphicsWindow.Clear()
Program.Delay(1)
GraphicsWindow.FontSize = 50
tb = Controls.AddTextBox(0,0)
Controls.SetSize(tb,1000,500)
Controls.SetTextBoxText(tb,"small basic")
Program.Delay(2000)
EndWhile
