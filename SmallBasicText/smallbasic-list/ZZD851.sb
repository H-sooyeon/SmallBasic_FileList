    xp=po[1]

    yp=po[2]

    

    ri=ri+1

    GraphicsWindow.PenWidth =0

    GraphicsWindow.BrushColor ="black

    rr[ri]=Shapes.AddText  (po[3])

    un=0

    un[1]=rr[ri]

    Shapes.Move(rr[ri] (xp)*15+29 yp*15+30)

     LDShapes.ZIndex (rr[ri] 2000)

    

  ElseIf lb=b21 then '---------------------------------------pnp

