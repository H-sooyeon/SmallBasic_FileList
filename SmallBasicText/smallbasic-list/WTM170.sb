Sub SetWindowProperties  

  GraphicsWindow.Width = gw

  GraphicsWindow.Height = gh  

  GraphicsWindow.Left = (Desktop.Width - gw) / 2

  GraphicsWindow.Top = 10

  GraphicsWindow.BackgroundColor = "black"  

EndSub



