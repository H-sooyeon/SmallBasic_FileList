Sub trr
  ll= LDText.Split (args[1] " ")
  For tt=1 To Array.GetItemCount (ll) Step 2
    If ll[tt]="r" Then
      Turtle.TurnRight ()
    elseIf ll[tt]="u" Then
      
      ddd="false
      Goto xx
    elseIf ll[tt]="d" Then
      
      ddd="true
      Goto xx
    elseIf ll[tt]="q" Then
      Turtle.Turn (180)
    elseIf text.StartsWith (ll[tt] "a") Then
      Turtle.Angle=Text.GetSubTextToEnd (ll[tt] 2)
    elseIf ll[tt]="l" Then
      Turtle.TurnLeft ()
    else
      t1=ll[tt]
      
      If Text.GetCharacterCode (Text.GetSubText (t1 1 1))>64 then
        t1=Text.GetSubTextToEnd (t1 2)
      endif
      Turtle.Turn (t1)
    endif
    t2=ll[tt+1]
    If Text.GetCharacterCode (Text.GetSubText (t2 1 1))>64 then
      t2=Text.GetSubTextToEnd (t2 2)
    endif
    t2s=5
    If t2<t2s Then
      t2s=t2
    endif
    rr=0
    While rr< t2
      Turtle.Move (t2s)
      If ddd then
        ee=Shapes.AddEllipse (4 4)
        Shapes .Move(ee Turtle.X Turtle.y)
        LDShapes.BrushColour (ee LDColours.HSLtoRGB (hh 1 .75))
        hh=hh+5
        LDShapes.AnimateOpacity (ee 600 10)
        Program.Delay (22)
      Endif
      rr=rr+t2s
    EndWhile 
    xx:
  EndFor 
EndSub 


