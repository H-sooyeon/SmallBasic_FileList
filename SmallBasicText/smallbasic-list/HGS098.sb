Sub DrawArc
  ' param cx, cy - center
  ' param r - radius
  ' param a1, a2 - start and end angle [degree]
  ' param pw - pen width
  ' param pc - pen color
  GraphicsWindow.BrushColor = pc 
  For a = a1 To a2
    x = cx + r * Math.Cos(a * Math.Pi / 180) - pw / 2
    y = cy + r * Math.Sin(a * Math.Pi / 180) - pw / 2
    GraphicsWindow.FillEllipse(x, y, pw, pw)
  EndFor
EndSub
