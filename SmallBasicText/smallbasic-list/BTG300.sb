  GraphicsWindow.Left = 10
  GraphicsWindow.Height = 480
  GraphicsWindow.Width = 620
  GraphicsWindow.Title = " Addressmanager "
  GraphicsWindow.CanResize = "False"
  GraphicsWindow.FontName = "Arrial"
  GraphicsWindow.FontSize = 14
  FontHight = 24
