  Controls.SetSize(TBTelephoneNumber,280,FontHight)
  
  MobileNumber = "Mobilnummer:"
  GraphicsWindow.DrawText(PB, 250, MobileNumber)
  TBMobileNumber = Controls.AddTextBox(PTB, 250)
