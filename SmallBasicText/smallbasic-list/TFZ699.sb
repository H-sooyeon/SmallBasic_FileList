      rnn="true

      

    ElseIf cc[1]*1=cc[1] Then

      prg[cc[1]][xl]=text.ConvertToUpperCase( cc[2])+" "+cc[3]+" "+cc[4]+" "+cc[5]+" "+cc[6]

