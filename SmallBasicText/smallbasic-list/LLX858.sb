 Sub RED

    

       R[1]=Text.GetSubText(hex, 2, 1)

       R[2]=Text.GetSubText(hex, 3, 1)

       

       For H = 1 To 2

                   If R[H]="A" THEN

                      R[H]=10

                     elseIf R[H]="B" THEN

                       R[H]=11

                      elseIf R[H]="C" THEN

                        R[H]=12

                        ElseIf R[H]="D" THEN

                          R[H]=13

                           elseIf R[H]="E" THEN

                              R[H]=14

                              elseIf R[H]="F" THEN

                                R[H]=15

                              EndIf

           EndFor

                             

               R= (R[2]* Math.Power(16,0))+ (R[1]* Math.Power(16,1))

                            

      EndSub

                          

                          

                          

  

