Sub OnMessageRecieved
  a = IOTCPServer.LastMessageIP
  b = IOTCPServer.LastMessageData
  msgl = Text.GetSubText(b,1,1)
  
  If msgl = "*" Then
    msguser = a + ":" + Text.GetSubTextToEnd(b,2)
    Broadcast()
    a = msguser
    msguser = ""  
  Else
    emsg = LDEncryption.AESEncrypt("New message from: " + a + ": " + b ,Password)
    
    filemsg = emsg
    filecolor = 3
    writefile()
  EndIf
EndSub
