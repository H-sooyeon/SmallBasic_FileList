GraphicsWindow.KeyDown=kkk



Sub kkk

  lk= text.ConvertToLowerCase( GraphicsWindow.LastKey)

  If lk="left" Then

    cx=cx-sx

    cy=cy+sy

    px=px-1

  ElseIf lk="right" Then

    cx=cx+sx

    cy=cy-sy

    px=px+1

  ElseIf lk="down" Then

    cy=cy+sy

    cx=cx+sx

    py=py+1

  ElseIf lk="up" Then

    cy=cy-sy

    cx=cx-sx

    py=py-1

   

  EndIf

  Shapes.Move(cc cx cy)

   GraphicsWindow.Title=px+" : "+py

EndSub



