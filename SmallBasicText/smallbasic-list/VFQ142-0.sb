Sub MoveCycle

  key= GraphicsWindow.LastKey

  

  If (key= "D") Then 

    delX= 12

    delY= 0

   

    Shapes.Rotate(player,90)

  

ElseIf (key= "A") Then

  delX= -12

  delY=0

    Shapes.Rotate(player,90)

  

ElseIf (key= "S") Then

  delY= 12

  delX=0

  

  Shapes.Rotate(player,0)

  

ElseIf (key= "W") Then

  delY= -12

  delX=0

    Shapes.Rotate(player,0)

  EndIf

EndSub



