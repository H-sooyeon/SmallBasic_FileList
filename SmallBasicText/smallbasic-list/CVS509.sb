  ldcall.Function5( "cdrw" x300 y400 0 36, -5)

  Turtle.Angle=0

  LDCall.Function4("ldrw",-1,0 95 0)

  Turtle.Angle=180

  LDCall.Function4("ldrw",-1,0 200 0)

  

EndSub

Sub uu

