Sub hh

  aa=-1

  LDCall.Function4("ldrw",x300,y400 100 0)

  ldcall.Function5( "cdrw" x300 y400-100 0 36, 5)

  LDCall.Function4("ldrw",-1,0 95 0)

  Turtle.Angle=0

  LDCall.Function4("ldrw",-1,0 200 0)

  

EndSub 



Sub yy

  aa=-1

