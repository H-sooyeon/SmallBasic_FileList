init()

writename()

direction=120

For i = 1 To 2

  Turtle.PenDown()

  Turtle.Angle=direction

  color1="Black"

  color2=color1

  drawbond()

  drawatom()

  For a = 1 To 3

    color2="white"

    If a=1 Then

      Turtle.TurnLeft()

      drawbond()

      drawatom()

    Else

      Turtle.TurnRight()

      drawbond()

      drawatom()

    EndIf

    Turtle.PenUp()

    Turtle.Turn(180)

    Turtle.Move(r+40+r)

    Turtle.Turn(180)

    Turtle.PenDown()

  EndFor

  Turtle.PenUp()

  Turtle.MoveTo(320,240)

  direction=direction+120

EndFor

GraphicsWindow.PenColor="Black"

drawatom()

GraphicsWindow.PenWidth=7.5

For i = 1 To 3

  Turtle.PenUp()

  Turtle.MoveTo(310+10*(i-1),240)

  Turtle.Angle=0

  If i=1 Or i=3 Then

    Turtle.PenDown()

    color2="red"

    drawbond()

  Else

    Turtle.PenUp()

    drawbond()

    drawatom()

  EndIf

EndFor

Turtle.Hide()



Sub init

  r=20

  d=r*2

  GraphicsWindow.Title="Molecular Challenge-Acetone(CH3COCH3)"

  GraphicsWindow.BackgroundColor="#dabc72"

  GraphicsWindow.PenWidth=15

  Turtle.Speed=10

EndSub

Sub writename

  GraphicsWindow.FontBold="false"

  GraphicsWindow.FontName="Times New Roman"

  GraphicsWindow.BrushColor="White"

  GraphicsWindow.FontSize=48

  GraphicsWindow.DrawText(300,20,"CH")

  GraphicsWindow.FontSize=24

  GraphicsWindow.DrawText(380,50,"3")

  GraphicsWindow.FontSize=48

  GraphicsWindow.DrawText(400,20,"COCH")

  GraphicsWindow.FontSize=24

  GraphicsWindow.DrawText(550,50,"3")

EndSub

Sub drawatom

  GraphicsWindow.BrushColor=GraphicsWindow.PenColor

  GraphicsWindow.FillEllipse(Turtle.X-r,Turtle.Y-r,d,d)

EndSub

Sub drawbond

  GraphicsWindow.PenColor=color1

  Turtle.Move(r+20)

  GraphicsWindow.PenColor=color2

  Turtle.Move(20+r)

EndSub


