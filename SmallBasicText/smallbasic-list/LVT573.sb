' //////////  SUB  \\\\\\\\\\

Sub CreateData

  For i = 1 To nRows

    str = Text.Append(str, Text.GetCharacter(64 + Math.GetRandomNumber(58)))

    data[i] = str

  EndFor

EndSub



Sub UpdateDataView

  For n = 1 To nRows

    'row[1] = data[n]

    LDControls.DataViewSetRow(dv, n, "1="+data[n])    ' row)

  EndFor

EndSub



Sub UpdateRows

  For n = 1 To nRows

    For r = 1 To nCols

      row[r] = data[n]

    EndFor

    LDControls.DataViewSetRow(dv, n, row)

  EndFor

EndSub





