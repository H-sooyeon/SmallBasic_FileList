'=============PLAYER TOUCHING GROUND===========

Sub PlayerTouchingGround

if (PlayerTG = "False") Then

  If PlayerWY < 10 Then

  PlayerWY = PlayerWY + 0.3

  EndIf

  PlayerWX = PlayerWX * 0.99

Else

  If Jump = 0 Then

    PlayerWY = 0

  endif

  PlayerWX = PlayerWX * 0.9

endif

endsub



'============BLOOD TOUCHING GROUND======

Sub BloodTouchingGround

If BloodTG = "False" Then

  if BloodWY < 10 Then

    BloodWY = BloodWY + 0.5

  endIf

  BloodWX = BloodWX * 0.999

Else

  BloodWY = 0

  BloodWX = 0

  'BloodSpot()

Endif

endsub



Sub GrenadeTouchingGround

  '=============GRENADE TOUCHING GROUND===========

if (GrenadeTG = "False") Then

  If GrenadeWY < 5 Then

    GrenadeWY = GrenadeWY + 0.1

  EndIf

  GrenadeWX = GrenadeWX * 0.99

Else

  GrenadeWY = 0

  GrenadeWX = GrenadeWX * 0.9

  endif

endsub



'=======================ON KEY DOWN=============================

Sub OnKeyDown

  Key = GraphicsWindow.LastKey

  If (Key = "Escape") Then

    Escape = 1

  ElseIf (Key = "Left") Then

    left = 1

    AimDirection = "Left"

  ElseIf (Key = "Right") Then

    right = 1

    AimDirection = "Right"

  ElseIf (Key = "Up") Then

    Jump = 1

  ElseIf (Key = "Space") Then

  If BulletLeft > 1000 or BulletLeft < -20 then

    Shoot = 1

    endif

  ElseIf (Key = "LeftCtrl") Then

    Grenadekey = 1

  ElseIf (Key = "Down") Then

    BloodEmmit = 1

  ElseIf (Key = "LeftShift") Then

    Delay = 15

    Timer.Interval = 6000

    Timer.Pause()

  EndIf

EndSub



'=======================ON KEY UP================================

Sub OnKeyUp

  Key = GraphicsWindow.LastKey

  If (Key = "Escape") Then

    Escape = 0

  ElseIf (Key = "Left") Then

    left = 0

  ElseIf (Key = "Right") Then

    right = 0

  ElseIf (Key = "Up") Then

    Jump = 0

  ElseIf (Key = "Space") Then

    Shoot = 0

  ElseIf (Key = "LeftCtrl") Then

    Grenadekey = 0

  ElseIf (Key = "Down") Then

    BloodEmmit = 0

  ElseIf (Key = "LeftShift") Then

    Delay = 5

    Timer.Interval = 2000

    Timer.Pause()

  EndIf

EndSub 



