    If (mode > 8) Then

      mode = 1

    EndIf

  ElseIf Right=1 then

      mode = mode+1

    If (mode > 16) Then

      mode = 9

    EndIf

  ENDIF

  Player = PlrAnims[mode]

  For i = 1 To mode-1

      Shapes.Move(PlrAnims[i],-1000,-1000)

    EndFor

    For i =mode+1 To PlrAnimsAmount

      Shapes.Move(PlrAnims[i],-1000,-1000)

  EndFor

EndSub

'======================EXPLOSION========================================

Sub Explosion

    Timer.Pause()

