soundFile = "http://www.brain-magazine.fr/mp3/kurtis%20blow%20-%20christmas%20rappin.mp3"
Sound.Play(soundFile)
greeting = "Merry christmas"
langs = LDTranslate.Languages()
langIDs = Array.GetAllIndices(langs)
For n = 1 To Array.GetItemCount(langIDs)
  local = LDTranslate.Translate(greeting, "en",langIDs[n])
  TextWindow.WriteLine(local + " 2014 !")
EndFor
