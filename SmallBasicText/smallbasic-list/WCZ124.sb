Sub convert

 For i=1 To MaxN

     A=file.ReadLine(PGDS,i)+dcomma           '  add  dcomma  for Null 

     For j=1 To maxM

        midP=text.GetIndexOf(A,",")

        If midP=1 Then 

          midword=""                          ' if null

        else

          midword=Text.GetSubText(A,1,midp-1)

        EndIf

        B[j]=B[j]+midword+","                  '  new  row  ;   append all columns

        A= Text.GetSubTextToEnd(A,midp+1)

     Endfor

  EndFor

EndSub



Sub newsave

  For j=1 To MaxM

' The following line could be harmful and has been automatically commented.

'     File.AppendContents(PGDS2,B[j])

  EndFor

EndSub



Sub GetmaxMN

 A=file.ReadLine(dumy,1)

 While A<>msg

    While L<>0

     midP=text.GetIndexOf(A,",")

     M=M+1

     If maxM<M Then 

        maxM=M

     EndIf

     A= Text.GetSubTextToEnd(A,midp+1)

     L=Text.GetLength(A)

    EndWhile

    M=0  

    N=N+1

    A=file.ReadLine(dumy,N)

    L=Text.GetLength(A)

  EndWhile

  MaxN=N-1

EndSub  



Sub dumycomma

  For i=1 To maxM

    dcomma=dcomma+","

  EndFor

EndSub

  


