Sub dott

  aa=ldtext.Replace (args[1] "dd" args[2])

  aa=ldtext.Replace (aa "d1" args[3])

  aa=ldtext.Replace (aa "d2" args[4])

  aa=ldtext.Replace (aa "d3" args[5])

  

  tt=LDText.Split (aa " ")

  For x=1 To Array.GetItemCount (tt) Step 2

    Turtle.Turn  (tt[x])

    Turtle.Move (tt[x+1])

  EndFor 

EndSub 


