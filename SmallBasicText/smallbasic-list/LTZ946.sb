For rw=1 To 330

  For t=0 To 1

    For f=1 To 4

      rr[rw][f]=Shapes.AddRectangle(3 25)

      Shapes.Move(rr[rw][f] 200+f*25+t*82+LDMath.Sin(rw*4.5)*20 10+rw*24)

      If Math.Remainder(rw 2)=0  Then

        If Text.IsSubText(text.GetSubText("32" t+1 1) f) Then

          Shapes.HideShape( rr[rw][f])

        EndIf

        

      EndIf

    EndFor

  EndFor

EndFor

