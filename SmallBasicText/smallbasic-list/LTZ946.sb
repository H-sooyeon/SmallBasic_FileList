x=7500 

GraphicsWindow.MouseDown=mmd

GraphicsWindow.MouseMove=mmd

GraphicsWindow.MouseUp=mmu



Sub mmd

  If Mouse.IsLeftButtonDown Then

    spp=spp+.05

    If spp>15 Then

      spp=15

    EndIf

  EndIf

  GraphicsWindow.Title="Speed km/h: "+(math.floor(spp*7)+30)

EndSub



Sub mmu

  spp=0

EndSub



