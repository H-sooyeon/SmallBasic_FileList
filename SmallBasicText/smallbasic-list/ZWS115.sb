'  1 in = 2,5 cm
' 1 cm = 0.4 in
TextWindow.Write("Select convert inches to cm: (Y or N)")
in_cm = TextWindow.Read()
If in_cm = "Y" Then
  TextWindow.Write("Enter the inches: ")
  inches = TextWindow.ReadNumber()
  Cm = inches * 2.5
  TextWindow.WriteLine(inches + " inches" + " is " + Cm + "cm")
Else
  TextWindow.Write(" Enter the cm: ")
  Cm = TextWindow.ReadNumber()
  inches = Cm / 2.5
  TextWindow.WriteLine(Cm + " cm " + " is " + inches + " inches")
  
  EndIf
  
