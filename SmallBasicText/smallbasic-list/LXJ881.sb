      o3d[z/2+1][_x1][_y1]=ld3dview.addcube (view3d,  4.7 clr[z/2+1] "d")

      LD3DView.TranslateGeometry (view3d o3d[z/2+1][_x1][_y1] f1*_x1, f1*_y1,f1*z )

    Endfor

  Endfor

endfor



