'=======================ON KEY DOWN=============================

Sub OnKeyDown

  Key = GraphicsWindow.LastKey

  If (Key = "Left") Then

    Left[1] = 1

  ElseIf (Key = "Right") Then

    Right[1] = 1

  ElseIf (Key = "Up") Then

    Up[1] = 1

  ElseIf (Key = "RightShift") Then

    Shift[1] = 1

  ElseIf (Key = "RightCtrl") Then

    BulletShot()

  ElseIf (Key = "A") Then

    Left[2] = 1

  ElseIf (Key = "D") Then

    Right[2] = 1

  ElseIf (Key = "W") Then

    Up[2] = 1

  ElseIf (Key = "LeftShift") Then

    Shift[2] = 1

  ElseIf (Key = "LeftCtrl") Then

    BulletShot2()

  EndIf

EndSub



'=======================ON KEY UP================================

Sub OnKeyUp

  Key = GraphicsWindow.LastKey

  If (Key = "Left") Then

    Left[1] = 0

  ElseIf (Key = "Right") Then

    Right[1] = 0

  ElseIf (Key = "Up") Then

    Up[1] = 0

  ElseIf (Key = "RightShift") Then

    Shift[1] = 0

  ElseIf (Key = "A") Then

    Left[2] = 0

  ElseIf (Key = "D") Then

    Right[2] = 0

  ElseIf (Key = "W") Then

    Up[2] = 0

  ElseIf (Key = "LeftShift") Then

    Shift[2] = 0

  endif

EndSub





'=======================COLLISION================================

Sub Collision

 For n = 1 To 5

  IF PlayerY[i]+20 >= BlockY[n] and PlayerY[i] <= BlockY[n]+BlockHeight[n] then

    If PlayerX[i]+20 > BlockX[n] and PlayerX[i]+20 < BlockX[n]+1 then

      playerWX[i] = -0.1

    elseif PlayerX[i] < BlockX[n]+BlockWidth[n] and PlayerX[i] > BlockX[n]-1 then

      playerWX[i] = 0.1

    endif

  ELSEIF PlayerX[i]+20 >= BlockX[n] and PlayerX[i] <= BlockX[n]+BlockWidth[n] then

    If PlayerY[i]+21 > BlockY[n] and PlayerY[i] < BlockY[n]+1 then

      PlayerTG[i] = "True"

      if Shift[i] = 1 then

      playerWY[i] = -1

      else

      playerWY[i] = 0

      endif

    Elseif PlayerY[i]-1 < BlockY[n]+BlockHeight[n] and PlayerY[i] > BlockY[n]+BlockHeight[n]-1 then

      playerWY[i] = 0.1

    Else

    endif

  ELSE

   PlayerTG[i] = "False"

 ENDIF

 EndFor

endsub

  '=======BOUNDARIES=========

sub Boundaries

  If PlayerY[i]<0 Then

    playerY[i] = 1

  ElseIf PlayerY[i]>GW-20 then

    PlayerY[i] = 0

  endif

  If PlayerX[i]<0 Then

    playerWX[i] = 0.2

  ElseIf PlayerX[i] > GW-20 then

    playerWX[i] = -0.2

  endif

endsub



