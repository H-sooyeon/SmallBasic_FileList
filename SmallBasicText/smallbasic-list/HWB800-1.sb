Sub wrtch
  pp=Text.GetIndexOf(chh args[3])
  ln=0
  wt=aa[1][pp]
  lll=Text.GetLength(wt)
  If args[3]="c" Then
    mm=LDText.Split("1 2 3 3 3 4 5 6" " ")
  ElseIf args[3]="4"  Then
    mm=LDText.Split("1 2 2 3 3 4 5 6" " ")
  Else
    mm=LDText.Split("1 2 2 3 4 4 5 6" " ")
  EndIf
  If args[4] Then
    mm=LDText.Split("1 2 3 4 5 6" " ")
    l8=6
  Else
    l8=8
  EndIf
  
  For m=1 To l8
    TextWindow.CursorLeft=args[1]
    TextWindow.CursorTop=args[2]+m-1
    For xi=1 To lll
      n=mm[m]
      wt=aa[n][pp]
      'GraphicsWindow.ShowMessage(wt n)
      
      cc=Text.GetSubText(wt xi 1)
      If cc="▌" or cc="▐"  Then
        TextWindow.ForegroundColor="black
      ElseIf cc="▒" Then
        TextWindow.ForegroundColor="white
      ElseIf cc=" " Then
        cc=""
        TextWindow.CursorLeft=TextWindow.CursorLeft+1
      Else
        TextWindow.ForegroundColor="red
      EndIf
      
      TextWindow.Write(cc)
    EndFor
    ln=Math.Max(ln Text.GetLength(aa[1][pp]))
    TextWindow.CursorTop=TextWindow.CursorTop+1
  EndFor
  TextWindow.CursorLeft=args[1]+ln+1
EndSub
