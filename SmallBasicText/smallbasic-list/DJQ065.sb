Sub ShuffleColors

  For n = 1 To nCol

    rnd = Math.GetRandomNumber(nCol)

    If rnd <> n Then

      tmp = cols[rnd]

      cols[rnd] = cols[n]

      'LDShapes.BrushColour(btn[rnd], cols[rnd])

      cols[n] = tmp

      'LDShapes.BrushColour(btn[n], cols[n])

    Else

      n = n - 1

    EndIf

  EndFor

