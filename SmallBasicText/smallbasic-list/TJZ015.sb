GraphicsWindow.Show()

GraphicsWindow.MouseDown = OnMouseDown



mouseDown = "False"

message = "Mouse x; y = "

time = Shapes.AddText(message) 



While "True" 

  If (mouseDown) Then 

    mx = GraphicsWindow.MouseX

    my = GraphicsWindow.MouseY

    Shapes.SetText(time, message + mx +";"+ my)

    mouseDown = "False"

  EndIf 

  Program.Delay(15)

EndWhile 





Sub OnMouseDown

  mouseDown = "True"

EndSub


