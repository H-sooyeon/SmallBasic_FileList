If(cheese = "r" or cheese = "R" and x = 2)Then

  TextWindow.WriteLine(l) 

  TextWindow.WriteLine(b)

ElseIf(cheese = "r" or cheese = "R" and x = 1)Then

  TextWindow.WriteLine(t) 

