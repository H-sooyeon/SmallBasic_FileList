Sub eMouseSign
  If gn0=0 Then
    Goto End_eMouseSign '初手に記号を置けない。
  EndIf
  If gbd[gz0]<>GEFIELD and gbd[gz0]<>GEOUT Then
    sDelSign() '記号(Aまたは石)を消去する。
    Goto End_eMouseSign
  EndIf
  If gp0=GESIGNA Then
    gsign8=Controls.GetTextBoxText(bContent)
    If gsign8="" Then
      Goto End_eMouseSign
    EndIf
    gbd[gz0]=gp0
    gxyz=0
    sDispSignA() '記号(A)を置く。
  ElseIf gp0=GESIGNB or gp0=GESIGNW then
    gbd[gz0]=gp0
    gxyz=0
    gcol0=GCOL[gp0-GESIGNA]
    sDispStone() '記号(石)を置く。
  EndIf
  sTraceNode()
  gn1=gnb6
  sDebugNode()
  
  End_eMouseSign:
EndSub

Sub sClearNode 'ノードを消去する。
  z2=gnd[GNZ][gn3]
  If z2=0 Then 'チェックする。
    Goto End_sClearNode
  endif
  p2=gbd[z2]
  If p2<>GEBLACK And p2<>GEWHITE Then
    Goto End_sClearNode
  endif
  gbd[z2]=GEFIELD '盤の石のデータを消去する。
  i2=math.Remainder(z2-1,GLN+4)-1 '盤の石を消去する。
  j2=math.Ceiling((z2-1)/(GLN+4))-2
  Shapes.remove(oNum[i2][j2])
  Shapes.remove(oStone[i2][j2])
  For k2=1 To 8 'ノードのデータを消去する。
    gnd[k2][gn3]=0
  endfor
  gnd[9][gn3]=""
  If gn3=gn0 Then 'ノード数(gn0)を削減する。
    gn0=gn0-1
    While gnd[GNZ][gn0]=0
    gn0=gn0-1
    if gn0<1 Then
      Goto End_sClearNode
    EndIf
  EndWhile
  EndIf
  
  End_sClearNode:
  'sInitGame()
  'sDebugNode()
EndSub

Sub sDelStone '石を消去する。
  n2=gn1　'最後に表示された石のノード(gn1)
  If n2=0 Then
    Goto End_sDelStone
  EndIf
  z2=gnd[GNZ][n2] 'クリックした石のノード(n2)を求める。Back
  while z2<>gz0
    n2=gnd[GNB][n2]
    If n2=0 Then
      Goto End_sDelStone
    EndIf
    z2=gnd[GNZ][n2]
  EndWhile
  n3=n2 '次のノードが無い最後のノード(n3)を求める。Forward
  
  F_sDelStone:
  nf2=gnd[GNF][n3]
  While nf2<>0
    n3=nf2
    nf2=gnd[GNF][nf2]
  EndWhile
  nb2=gnd[GNB][n3]
  nr2=gnd[GNR][n3]
  nl2=gnd[GNL][n3]
  If nb2=0 then
    sInitGame()
    Goto End_sDelStone
  EndIf
  If nl2=0 then
    gnd[GNF][nb2]=nr2
    If nr2=0 Then
      n4=nb2 '消去する予定のノード
    else
      gnd[GNB][nr2]=nb2
      gnd[GNL][nr2]=0
      n4=nr2 '消去する予定のノード
    EndIf
  else
    'gnd[GNR][nl2]=nr2
    If nr2=0 Then
      gnd[GNR][nl2]=nr2
      n4=nl2 '消去する予定のノード
      
      gtext0="test"
      sMessage()
      Goto End_sDelStone
      gn3=n3
      sClearNode() 'n3ノードを消去する。
      n3=n4
      Goto End_sDelStone
    
    else
      gnd[GNR][nl2]=nr2
      gnd[GNL][nr2]=nl2
      n4=nr2 '消去する予定のノード
    EndIf
    'n4=nl2 '消去する予定のノード
    'n4=nr2 '消去する予定のノード
  EndIf
  gn3=n3
  sClearNode() 'n3ノードを消去する。
  If n3<>n2 Then
    n3=n4
    Goto F_sDelStone
  EndIf
    
  End_sDelStone:
endsub

Sub sDelSign '記号(Aまたは石)を消去する。
  If gn1>0 then
    nb2=gnd[GNB][gn1]
    If nb2=0 Then
      nb2=1
    endif
  Else
    nb2=1
  EndIf
  nf2=nb2
  While nf2<>0
    If gnd[GNZ][nf2]=gz0 Then
      goto Del_sDelSign
    endif
    nb2=nf2
    nf2=gnd[GNF][nf2]
  EndWhile
  Goto End_sDelSign
  
  Del_sDelSign:
  nf3=gnd[GNF][nf2]
  gnd[GNF][nb2]=nf3
  If nf3<>0 then
    gnd[GNB][nf3]=nb2
  endif
  gnd[GNZ][nf2]=0
  gnd[GNB][nf2]=0
  gnd[GNF][nf2]=0
  gnd[GNR][nf2]=0
  gnd[GNL][nf2]=0
  gnd[GNP][nf2]=0
  gnd[GNS][nf2]=""
  If gi0<>0 Then
    i2=gi0
    j2=gj0
  else
    i2=math.Remainder(gz0-1,GLN+4)-1
    j2=math.Ceiling((gz0-1)/(GLN+4))-2
  endif
  p2=gbd[gz0]
  If p2=GESIGNA Then
    Shapes.remove(oNum[i2][j2]) '記号(A)を消去する。
  elseIf p2=GESIGNB Or p2=GESIGNW Then
    Shapes.remove(oStone[i2][j2]) '記号(石)を消去する。
  endif
  gbd[gz0]=GEFIELD
  
  End_sDelSign:
endsub

