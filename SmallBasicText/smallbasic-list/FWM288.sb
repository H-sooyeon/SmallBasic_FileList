Sub sSplitLine '行を分割する。
  if Text.GetLength(gLine9)>0 Then
    i2=Text.GetIndexOf(gLine9,",")
    j2=1
    While i2>0
      gnd[j2][gn9]=Text.GetSubText(gLine9,1,i2-1)
      gtext0=gtext0+gnd[j2][gn9]+","
      sMessage()
      gLine9=Text.GetSubTextToEnd(gLine9,i2+1)
      j2=j2+1
      i2=Text.GetIndexOf(gLine9,",")
    Endwhile
    gnd[j2][gn9]=gLine9
    gtext0=gtext0+gnd[j2][gn9]+","
    sMessage()
  EndIf
EndSub

