Sub sAddNode 'ノードを追加する。 入力:gnd[][],gn0,gnb6,gnl6,gz0,gt0,gp0 出力:gnd[][],gn0
  gn0=gn0+1
  gnd[GNF][gn0]=0 'Forward
  gnd[GNB][gn0]=gnb6 'Back
  gnd[GNR][gn0]=0 'Right
  gnd[GNL][gn0]=gnl6 'Left
  gnd[GNZ][gn0]=gz0 'z
  gnd[GNT][gn0]=gt0 'number(Turn)
  gnd[GNP][gn0]=gp0 'Player
  gnd[GNE][gn0]=0 'value
  if gbd[gz0]=GESIGNA then
    ns6=gsign8
  Else
    ns6=""
  EndIf
  gnd[GNS][gn0]=ns6 'sign
  If gnb6<>0 Then
    gnd[GNF][gnb6]=gn0
  EndIf
  If gnl6<>0 Then
    gnd[GNR][gnl6]=gn0
  EndIf
EndSub

Sub sTraceNode 'ノードを追跡する。 入力:gnd[][],gn0,gn1,gz0,gt0,gp0 出力:gnd[][],gn0,gnb6
  If gn1=0 Then '局面が新しい。
    If gt0>0 then
      If gn0=0 Then '初手(ノードが無い。)
        gt0=1
        gp0=GEBLACK
        gnb6=0
        gnl6=0
        sAddNode()
        gnb6=1
        Goto End_sTraceNode
      ElseIf gnd[GNZ][1]=gz0 then
        gnb6=1
        Goto End_sTraceNode
      EndIf
    Else
      If gn0=0 Then '初手(ノードが無い。) 
        gnb6=0
        gnl6=0
        sAddNode()
        gnb6=1
        Goto End_sTraceNode
      ElseIf gnd[GNZ][1]=gz0 then
        gnb6=1
        Goto End_sTraceNode
      EndIf
    EndIf
  endif
  nf6=gnd[GNF][gn1]
  If nf6=0 Then '次の手の候補が無い。 forward
    gnb6=gn1
    gnl6=0
    sAddNode()
    gnb6=gn0
    Goto End_sTraceNode
  endif
  
  If gnd[GNT][nf6]=0 Then '次が記号の場合、最後の記号の後に追加する。
    While nf6<>0
      nb6=nf6
      nf6=gnd[GNF][nf6]
    EndWhile
    gnb6=nb6
    gnl6=0
    sAddNode()
    gnb6=gn0
    Goto End_sTraceNode
  EndIf
  
  If gnd[GNZ][nf6]=gz0 Then
    gnb6=nf6
    Goto End_sTraceNode
  endif
  nr6=nf6
  nf6=gnd[GNR][nf6]
  While nf6<>0
    If gnd[GNZ][nf6]=gz0 then
      gnb6=nf6
      Goto End_sTraceNode
    EndIf
    nr6=nf6
    nf6=gnd[GNR][nf6]
  EndWhile
  gnb6=0 '次の手の候補を追加する。right
  gnl6=nr6
  sAddNode()
  gnb6=gn0
  
  End_sTraceNode:
EndSub

