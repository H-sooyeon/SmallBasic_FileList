GraphicsWindow.Width=600

GraphicsWindow.Height=500

GraphicsWindow.Left=0

GraphicsWindow.Top=0

GraphicsWindow.BackgroundColor="White"

GraphicsWindow.Title="Tag"

px=-30

py=-30

ox=450

oy=350

a=0

speed=10

touch="False"

GraphicsWindow.KeyDown=keydown

GraphicsWindow.PenColor = "Red"

GraphicsWindow.BrushColor = "Red"

Player=Shapes.AddRectangle(150,150)

Shapes.Move(Player,px,py)

Shapes.Zoom(Player,0.5,0.5)

GraphicsWindow.PenColor = "Blue"

GraphicsWindow.BrushColor = "Blue"

Opponent=Shapes.AddRectangle(150,150)

Shapes.Move(Opponent,ox,oy)

Shapes.Zoom(Opponent,0.5,0.5)



Sub keydown

  If GraphicsWindow.LastKey="W" Then

    py=py-2

    a=a+0.5

    Shapes.Move(Player,px,py)

  EndIf

  If GraphicsWindow.LastKey="S" Then

    py=py+2

    a=a+0.5

    Shapes.Move(Player,px,py)

  EndIf

  If GraphicsWindow.LastKey="A" Then

    px=px-2

    a=a+0.5

    Shapes.Move(Player,px,py)

  EndIf

  If GraphicsWindow.LastKey="D" Then

    px=px+2

    a=a+0.5

    Shapes.Move(Player,px,py)

  EndIf

  

  If px>500 Then

    px=-50

    speed=speed-1

    Shapes.Move(Player,px,py)  

endif

  If py>400 Then

    py=-50

        speed=speed-1

      Shapes.Move(Player,px,py)

EndIf

  If px<-50 Then

    px=500

        speed=speed-1

    Shapes.Move(Player,px,py)  

endif

  If py<-50 Then

    py=400

        speed=speed-1

    Shapes.Move(Player,px,py)  

EndIf

EndSub



While touch="False"

  If ox<px Then

    ox=ox+1

    Program.Delay(speed)

    Shapes.Move(Opponent,ox,oy)

  EndIf

  If ox>px Then

    ox=ox-1

    Program.Delay(speed)

    Shapes.Move(Opponent,ox,oy)

  EndIf

  If oy<py Then

    oy=oy+1

    Program.Delay(speed)

    Shapes.Move(Opponent,ox,oy)

  EndIf

  If oy>py Then

    oy=oy-1

    Program.Delay(speed)

    Shapes.Move(Opponent,ox,oy)

  EndIf

  If ox = px And oy = py Then

    touch="True"

    GraphicsWindow.ShowMessage("You Lost! But You Got "+a+" Points!","Game Over!")

  Program.End()

  EndIf

EndWhile














