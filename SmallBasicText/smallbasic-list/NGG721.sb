args=0

GraphicsWindow.Title="Magic Squares

sub genSq'(int n)

  n=args[1]

  i = n/2

  j = n-1

  For x=0 To n

    For y=0 To n

      magicSquare [x][y]=0

    EndFor

  EndFor 

  

  num=1

  while num<=n*n

    

    if (i=-1 And  j=n) Then 

      

      j = n-2

      i = 0

      

    else

      if (j = n) Then 

        j = 0

      endif

      

      if (i < 0) then

        i=n-1

      endif

    EndIf 

    

    if (magicSquare[math.Floor (i)][math.Floor (j)])>0 then 

      j=j- 2

      i=i+1

      goto  cont

      

    else

      magicSquare[math.Floor (i)][math.Floor (j)] = num

      num=num+1  

    endif

    j=j+1

    i=i-1

    cont:

  endwhile

  

endsub

