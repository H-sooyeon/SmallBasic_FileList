  endif

  For y=0 To n-1

    For x=0 To n-1

      nm=text.GetSubTextToEnd ( bb+magicSquare [x][y] 2)

      If Text.StartsWith (nm "0") Then

        nn="" 

        i=1

        While Text.GetSubText(nm i 1)="0"

          nn=nn+" "

          i=i+1

        EndWhile 

        nm=nn+Text.GetSubTextToEnd (nm i)

      EndIf 

      LDCall.Function2 ("www" nm+"  " "")

    EndFor

    LDCall.Function2 ("www" "" "true")

    LDCall.Function2 ("www" "" "true")

  EndFor 

  LDCall.Function2 ("www" "" "true") 

  LDCall.Function2 ("www" "" "true")

  

EndFor 

