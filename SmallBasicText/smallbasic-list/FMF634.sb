Sub OnMousepDown

  mode = mode+1 ' change mode

  If (mode > 3) Then

    mode = 1

  EndIf

  'Hide all balls

  For i = 1 To Array.GetItemCount(PlrAnims)

    Shapes.Move(PlrAnims[i],-1000,-1000)

  EndFor

  'Set current ball as current

  Player = PlrAnims[mode]

EndSub





















