Sub TogglePinned

  '' Set GW topmost <-> default

  LDGraphicsWindow.TopMost = LDLogic.Not(LDGraphicsWindow.TopMost)

  

  ''Optional change the Pin shape  Pin <-> ""  (empty)

  Shapes.SetText(shpPin, LDLogic.Switch(LDGraphicsWindow.TopMost, pin, ""))

EndSub

  


