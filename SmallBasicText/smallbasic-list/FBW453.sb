'Button_Clicked

Controls.ButtonClicked = bc

Sub bc

  If Controls.LastClickedButton = continue Then

    Sound.PlayClick()

    Shapes.HideShape(back)

    Shapes.HideShape(info)

    Controls.HideControl(continue)

    Shapes.ShowShape(flags)

    Controls.SetButtonCaption(state, 1)

  EndIf

EndSub


