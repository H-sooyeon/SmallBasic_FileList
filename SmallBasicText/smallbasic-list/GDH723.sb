GraphicsWindow.Height = 800

GraphicsWindow.Width = 1000

GraphicsWindow.BrushColor = "Red"

While "True"

  Boom = Shapes.AddEllipse(20,20) 

  Shapes.Move(Boom,100+ Math.GetRandomNumber(800),100+ Math.GetRandomNumber(600))

  For j =1 To 50

    

    Shapes.Zoom(Boom,j,j)

    Program.Delay(5)

  EndFor

  Program.Delay(500)

  GraphicsWindow.Clear()

EndWhile

  


