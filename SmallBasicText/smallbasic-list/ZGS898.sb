Sub drww

  For x=1 To Array.GetItemCount(aa)

    If aa[x]="d" Then

      Turtle.PenDown()

    ElseIf aa[x]="u" Then

      Turtle.PenUp()

    ElseIf aa[x]="r" Then

      Turtle.TurnRight()

    ElseIf aa[x]="l" Then

      Turtle.TurnLeft()

    ElseIf aa[x]="a" Then

      Turtle.Turn(-60)

    ElseIf aa[x]="b" Then

      Turtle.Turn(60)

    Else

      Turtle.Move(aa[x]*20)

    EndIf

  EndFor

EndSub



