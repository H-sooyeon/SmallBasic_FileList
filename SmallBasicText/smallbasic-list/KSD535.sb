TextWindow.Title = "Textwindow"
TextWindow.Write("What's your name?: ")
name = TextWindow.Read()
TextWindow.Write("What's your age?: ")
age = TextWindow.Read()
TextWindow.Write("What's your favorite color?: ")
color = TextWindow.Read()
TextWindow.Write("What's your favorite number?: ")
num = TextWindow.Read()
