hobby = TextWindow.Read()
output = name + " is " + age + ", favorite colour is " + color + ", favorite number is " + num + ", And favorite hobby is " + hobby + "."
TextWindow.Clear()
TextWindow.ForegroundColor = "Blue"
TextWindow.WriteLine(output)
