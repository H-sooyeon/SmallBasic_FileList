TextWindow.BackgroundColor="black"



Sub Eval

  sign = 1

  ans = 0

  num = ""

  ee=LDText.Split(e " ")

  For p = 1 To Array.GetItemCount(ee)

    c = ee[p]

    If c = "+" Then

      ans = ans + sign * num

      sign = 1

      num = ""

    ElseIf c = "-" Then

      ans = ans + sign * num

      sign = -1

      num = ""

    Else

      num = Text.Append(num, c)

    EndIf

  EndFor

  ans = ans + sign * num

EndSub


