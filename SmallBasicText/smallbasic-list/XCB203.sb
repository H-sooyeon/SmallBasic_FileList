Sub qdrw

  x=args[1]

  y=args[2]

  z=args[3]

  

  If z="<" Then

    cx=cx-ss

    Goto fff

  elseIf z=">" Then

    cx=cx+ss/1.5

    Goto fff

  elseIf z=" " Then

    cx=cx+ss*2

    Goto fff

  elseIf z="-" Then

    GraphicsWindow.FillRectangle (cx y*ss+ss/3.6 ss ss/1.6)

    cx=cx+ss

    Goto fff

  elseIf z="+" Then

    cx=cx+ss/2.8

    Goto fff

  elseif z=0  or z>5 Then

    g=0 

  ElseIf z<5 then

    g=z+2

    g=math.Remainder (g,4)

  Else 

    cx=cx+ss

    Goto fff

  endif     

  px[g]=cx

  py[g]=y*ss

  g=g+1

  g=math.Remainder (g,4)

  

  px[g]=cx+ss

  py[g]=y*ss

  g=g+1

  g=math.Remainder (g,4)

  

  px[g]=cx+ss

  py[g]=y*ss+ss

  g=g+1

  g=math.Remainder (g,4)

  

  px[g]=cx

  py[g]=y*ss+ss

  GraphicsWindow.BrushColor =LDColours.HSLtoRGB (0,.7,0.55)

