continue = "True"

While continue

  index = Array.GetAllIndices(todo)

  num = Array.GetItemCount(todo)

  For i = 1 To num

    TextWindow.WriteLine(i + " " + todo[index[i]])

  EndFor

  TextWindow.WriteLine("")

  TextWindow.Write("? ")

  cmd = Text.ConvertToLowerCase(TextWindow.Read())

  If cmd = "a" Then

    AddTODO()

  ElseIf Text.StartsWith(cmd, "d") Then

    DeleteTODO()

  ElseIf cmd = "q" Then

    continue = "False"

  Else

    ShowHelp()

  EndIf

EndWhile

